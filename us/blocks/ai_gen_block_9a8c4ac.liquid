{% doc %}
  @prompt
    Create a tabbed product showcase section that builds upon an existing Split product showcase design. Generate multiple tabs that can each display different products or product collections together. Each tab should maintain the split layout style while allowing merchants to showcase different product categories or featured items. Include smooth tab transitions and make the section highly customizable for tab labels, content, and styling.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-tabbed-showcase-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.section_bg_color }};
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-tabbed-showcase__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-tabbed-showcase__tabs-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    margin-bottom: {{ block.settings.tabs_margin_bottom }}px;
    border-bottom: 1px solid {{ block.settings.tab_border_color }};
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .ai-tabbed-showcase__tabs-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-tabbed-showcase__tab-{{ ai_gen_id }} {
    padding: {{ block.settings.tab_padding_vertical }}px {{ block.settings.tab_padding_horizontal }}px;
    background: none;
    border: none;
    cursor: pointer;
    font-size: {{ block.settings.tab_font_size }}px;
    font-weight: {{ block.settings.tab_font_weight }};
    color: {{ block.settings.tab_text_color }};
    border-bottom: 3px solid transparent;
    transition: all 0.3s ease;
    white-space: nowrap;
    position: relative;
  }

  .ai-tabbed-showcase__tab-{{ ai_gen_id }}:hover {
    color: {{ block.settings.tab_hover_color }};
  }

  .ai-tabbed-showcase__tab-{{ ai_gen_id }}.active {
    color: {{ block.settings.tab_active_color }};
    border-bottom-color: {{ block.settings.tab_active_border_color }};
  }

  .ai-tabbed-showcase__content-{{ ai_gen_id }} {
    position: relative;
    min-height: 400px;
  }

  .ai-tabbed-showcase__panel-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity {{ block.settings.transition_duration }}ms ease, visibility {{ block.settings.transition_duration }}ms ease;
  }

  .ai-tabbed-showcase__panel-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
  }

  .ai-tabbed-showcase__split-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.split_gap }}px;
    align-items: center;
    min-height: 400px;
  }

  .ai-tabbed-showcase__content-side-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .ai-tabbed-showcase__image-side-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-tabbed-showcase__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    min-height: 400px;
  }

  .ai-tabbed-showcase__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    min-height: 400px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
    position: relative;
  }

  .ai-tabbed-showcase__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-tabbed-showcase__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-tabbed-showcase__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_margin_bottom }}px;
    line-height: 1.2;
  }

  .ai-tabbed-showcase__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 {{ block.settings.description_margin_bottom }}px;
    line-height: 1.5;
  }

  .ai-tabbed-showcase__products-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: {{ block.settings.products_gap }}px;
    margin-bottom: {{ block.settings.products_margin_bottom }}px;
  }

  .ai-tabbed-showcase__product-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-tabbed-showcase__product-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    border-radius: {{ block.settings.product_image_radius }}px;
    margin-bottom: 8px;
  }

  .ai-tabbed-showcase__product-title-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 500;
    margin: 0 0 4px;
    color: {{ block.settings.product_title_color }};
  }

  .ai-tabbed-showcase__product-price-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    color: {{ block.settings.product_price_color }};
  }

  .ai-tabbed-showcase__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-tabbed-showcase__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-tabbed-showcase__empty-products-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 768px) {
    .ai-tabbed-showcase__split-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-tabbed-showcase__split-{{ ai_gen_id }}--reverse {
      grid-template-columns: 1fr;
    }

    .ai-tabbed-showcase__content-side-{{ ai_gen_id }} {
      order: 2;
      padding: 20px;
    }

    .ai-tabbed-showcase__image-side-{{ ai_gen_id }} {
      order: 1;
    }

    .ai-tabbed-showcase__tabs-{{ ai_gen_id }} {
      justify-content: flex-start;
    }

    .ai-tabbed-showcase__products-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  {% if block.settings.layout_reverse %}
    .ai-tabbed-showcase__split-{{ ai_gen_id }}--reverse .ai-tabbed-showcase__content-side-{{ ai_gen_id }} {
      order: 2;
    }

    .ai-tabbed-showcase__split-{{ ai_gen_id }}--reverse .ai-tabbed-showcase__image-side-{{ ai_gen_id }} {
      order: 1;
    }
  {% endif %}
{% endstyle %}

<tabbed-showcase-{{ ai_gen_id }}
  class="ai-tabbed-showcase-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-tabbed-showcase__container-{{ ai_gen_id }}">
    <div class="ai-tabbed-showcase__tabs-{{ ai_gen_id }}" role="tablist">
      {% for i in (1..4) %}
        {% liquid
          assign tab_enabled_key = 'tab_' | append: i | append: '_enabled'
          assign tab_label_key = 'tab_' | append: i | append: '_label'
          assign tab_enabled = block.settings[tab_enabled_key]
          assign tab_label = block.settings[tab_label_key]
        %}
        
        {% if tab_enabled and tab_label != blank %}
          <button
            class="ai-tabbed-showcase__tab-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            role="tab"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="ai-tabbed-showcase-panel-{{ ai_gen_id }}-{{ i }}"
            data-tab="{{ i }}"
          >
            {{ tab_label }}
          </button>
        {% endif %}
      {% endfor %}
    </div>

    <div class="ai-tabbed-showcase__content-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign tab_enabled_key = 'tab_' | append: i | append: '_enabled'
          assign tab_title_key = 'tab_' | append: i | append: '_title'
          assign tab_description_key = 'tab_' | append: i | append: '_description'
          assign tab_image_key = 'tab_' | append: i | append: '_image'
          assign tab_collection_key = 'tab_' | append: i | append: '_collection'
          assign tab_products_key = 'tab_' | append: i | append: '_products'
          assign tab_button_text_key = 'tab_' | append: i | append: '_button_text'
          assign tab_button_link_key = 'tab_' | append: i | append: '_button_link'

          assign tab_enabled = block.settings[tab_enabled_key]
          assign tab_title = block.settings[tab_title_key]
          assign tab_description = block.settings[tab_description_key]
          assign tab_image = block.settings[tab_image_key]
          assign tab_collection = block.settings[tab_collection_key]
          assign tab_products = block.settings[tab_products_key]
          assign tab_button_text = block.settings[tab_button_text_key]
          assign tab_button_link = block.settings[tab_button_link_key]
        %}

        {% if tab_enabled %}
          <div
            class="ai-tabbed-showcase__panel-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            role="tabpanel"
            id="ai-tabbed-showcase-panel-{{ ai_gen_id }}-{{ i }}"
            aria-labelledby="ai-tabbed-showcase-tab-{{ ai_gen_id }}-{{ i }}"
          >
            <div class="ai-tabbed-showcase__split-{{ ai_gen_id }} {% if block.settings.layout_reverse %}ai-tabbed-showcase__split-{{ ai_gen_id }}--reverse{% endif %}">
              <div class="ai-tabbed-showcase__content-side-{{ ai_gen_id }}">
                {% if tab_title != blank %}
                  <h2 class="ai-tabbed-showcase__title-{{ ai_gen_id }}">{{ tab_title }}</h2>
                {% endif %}

                {% if tab_description != blank %}
                  <div class="ai-tabbed-showcase__description-{{ ai_gen_id }}">{{ tab_description }}</div>
                {% endif %}

                {% liquid
                  assign display_products = tab_products
                  if tab_collection != blank and tab_products.size == 0
                    assign display_products = tab_collection.products | limit: 4
                  endif
                %}

                {% if display_products.size > 0 %}
                  <div class="ai-tabbed-showcase__products-{{ ai_gen_id }}">
                    {% for product in display_products limit: 4 %}
                      <div class="ai-tabbed-showcase__product-{{ ai_gen_id }}">
                        <a href="{{ product.url }}">
                          {% if product.featured_image %}
                            <img
                              src="{{ product.featured_image | image_url: width: 200 }}"
                              alt="{{ product.featured_image.alt | escape }}"
                              class="ai-tabbed-showcase__product-image-{{ ai_gen_id }}"
                              loading="lazy"
                              width="200"
                              height="200"
                            >
                          {% endif %}
                          <h3 class="ai-tabbed-showcase__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                          <div class="ai-tabbed-showcase__product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
                        </a>
                      </div>
                    {% endfor %}
                  </div>
                {% elsif tab_collection == blank and tab_products.size == 0 %}
                  <div class="ai-tabbed-showcase__empty-products-{{ ai_gen_id }}">
                    Next, add products or select a collection
                  </div>
                {% endif %}

                {% if tab_button_text != blank and tab_button_link != blank %}<a
                    href="{{ tab_button_link }}"
                    class="ai-tabbed-showcase__button-{{ ai_gen_id }}"
                  >
                    {{ tab_button_text }}
                  </a>
                {% endif %}
              </div>

              <div class="ai-tabbed-showcase__image-side-{{ ai_gen_id }}">
                {% if tab_image %}
                  <img
                    src="{{ tab_image | image_url: width: 800 }}"
                    alt="{{ tab_image.alt | escape }}"
                    class="ai-tabbed-showcase__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="{{ tab_image.width }}"
                    height="{{ tab_image.height }}"
                  >
                {% else %}
                  <div class="ai-tabbed-showcase__image-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                    <div class="ai-tabbed-showcase__empty-state-{{ ai_gen_id }}">
                      Next, add an image for this tab
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</tabbed-showcase-{{ ai_gen_id }}>

<script>
  (function() {
    class TabbedShowcase{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-tabbed-showcase__tab-{{ ai_gen_id }}');
        this.panels = this.querySelectorAll('.ai-tabbed-showcase__panel-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab, index) => {
          tab.addEventListener('click', () => {
            this.switchTab(index);
          });

          tab.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              this.switchTab(index);
            }
          });
        });
      }

      switchTab(activeIndex) {
        this.tabs.forEach((tab, index) => {
          const isActive = index === activeIndex;
          tab.classList.toggle('active', isActive);
          tab.setAttribute('aria-selected', isActive);
        });

        this.panels.forEach((panel, index) => {
          panel.classList.toggle('active', index === activeIndex);
        });

        this.tabs[activeIndex].focus();
      }
    }

    customElements.define('tabbed-showcase-{{ ai_gen_id }}', TabbedShowcase{{ ai_gen_id }});
  })();
</script>

