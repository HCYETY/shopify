    background-color: {{ block.settings.section_background_color }};
  }

  .ai-clearance-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-clearance-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_margin_bottom }}px;
  }

  .ai-clearance-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_margin_bottom }}px;
    text-transform: {{ block.settings.title_text_transform }};
  }

  .ai-clearance-promo-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.promo_bg_color }};
    color: {{ block.settings.promo_text_color }};
    padding: {{ block.settings.promo_padding_vertical }}px {{ block.settings.promo_padding_horizontal }}px;
    border-radius: {{ block.settings.promo_border_radius }}px;
    font-size: {{ block.settings.promo_font_size }}px;
    font-weight: {{ block.settings.promo_font_weight }};
    text-transform: {{ block.settings.promo_text_transform }};
    margin-bottom: {{ block.settings.promo_margin_bottom }}px;
    {% if block.settings.enable_shake_animation %}
      animation: ai-clearance-shake-{{ ai_gen_id }} 0.5s ease-in-out infinite alternate;
    {% endif %}
  }

  @keyframes ai-clearance-shake-{{ ai_gen_id }} {
    0% { transform: translateX(0); }
    25% { transform: translateX(-2px); }
    50% { transform: translateX(2px); }
    75% { transform: translateX(-1px); }
    100% { transform: translateX(1px); }
  }

  .ai-clearance-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_font_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-clearance-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.product_gap }}px;
    margin-bottom: {{ block.settings.grid_margin_bottom }}px;
  }

  @media screen and (min-width: 768px) {
    .ai-clearance-products-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .ai-clearance-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
  }

  .ai-clearance-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.card_hover_lift }}px);
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical | plus: 5 }}px {{ block.settings.card_shadow_blur | plus: 10 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | plus: 0.1 }});
