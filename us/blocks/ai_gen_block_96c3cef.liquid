    color: {{ block.settings.nav_button_text_color }};
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .ai-clearance-nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_background }};
    color: {{ block.settings.nav_button_hover_text_color }};
  }

  .ai-clearance-nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-clearance-nav-button-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-clearance-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 15px;
  }

  .ai-clearance-dot-{{ ai_gen_id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_inactive_color }};
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .ai-clearance-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
  }

  .ai-clearance-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
  }
{% endstyle %}

<clearance-products-{{ ai_gen_id }}
  class="ai-clearance-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-clearance-container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank or block.settings.section_subtitle != blank %}
      <div class="ai-clearance-header-{{ ai_gen_id }}">
        {% if block.settings.section_title != blank %}
          <h2 class="ai-clearance-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
        {% endif %}
        {% if block.settings.section_subtitle != blank %}
          <p class="ai-clearance-subtitle-{{ ai_gen_id }}">{{ block.settings.section_subtitle }}</p>
        {% endif %}
        {% if block.settings.promo_text != blank %}
          <div class="ai-clearance-promo-{{ ai_gen_id }}">{{ block.settings.promo_text }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank and block.settings.collection.products.size > 0 %}
      <div class="ai-clearance-products-wrapper-{{ ai_gen_id }}">
        <div class="ai-clearance-products-container-{{ ai_gen_id }}" data-container>
          {% assign products_per_page = 8 %}
          {% assign total_pages = block.settings.collection.products.size | divided_by: products_per_page | ceil %}
          
          {% for page in (1..total_pages) %}
            {% assign start_index = page | minus: 1 | times: products_per_page %}
            {% assign end_index = start_index | plus: products_per_page | minus: 1 %}<div class="ai-clearance-products-grid-{{ ai_gen_id }}">
              {% for i in (start_index..end_index) %}
                {% assign product = block.settings.collection.products[i] %}
                {% if product %}
                  <div class="ai-clearance-product-{{ ai_gen_id }}">
                    <div class="ai-clearance-product-image-wrapper-{{ ai_gen_id }}">
                      {% if product.featured_image %}
                        <img
                          src="{{ product.featured_image | image_url: width: 400 }}"
                          alt="{{ product.featured_image.alt | escape }}"
                          class="ai-clearance-product-image-{{ ai_gen_id }}"
                          loading="lazy"
                          width="400"
                          height="400"
                        >
                      {% else %}
                        <div class="ai-clearance-product-image-placeholder-{{ ai_gen_id }}">
                          {{ 'product-1' | placeholder_svg_tag }}
                        </div>
                      {% endif %}
                      
                      {% if product.compare_at_price > product.price %}
                        {% assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                        <div class="ai-clearance-badge-{{ ai_gen_id }}">
                          {{ block.settings.badge_text | replace: '[discount]', discount_percentage | round }}
                        </div>
                      {% endif %}
                    </div>

                    <h3 class="ai-clearance-product-title-{{ ai_gen_id }}">
                      <a href="{{ product.url }}">{{ product.title }}</a>
                    </h3>

                    <div class="ai-clearance-product-prices-{{ ai_gen_id }}">
                      <span class="ai-clearance-product-price-{{ ai_gen_id }}">{{ product.price | money }}</span>
                      {% if product.compare_at_price > product.price %}
                        <span class="ai-clearance-product-compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                      {% endif %}
                    </div>

                    {% form 'product', product %}
                      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                      <button
                        type="submit"
                        class="ai-clearance-add-to-cart-{{ ai_gen_id }}"
                        {% unless product.available %}disabled{% endunless %}
                      >
                        {% if product.available %}
                          {{ block.settings.add_to_cart_text }}
                        {% else %}
                          {{ block.settings.sold_out_text }}
                        {% endif %}
                      </button>
                    {% endform %}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          {% endfor %}
        </div>

        {% if total_pages > 1 %}
          <div class="ai-clearance-navigation-{{ ai_gen_id }}">
            <button class="ai-clearance-nav-button-{{ ai_gen_id }}" data-prev aria-label="Previous products">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15,18 9,12 15,6"></polyline>
              </svg>
            </button>
            <button class="ai-clearance-nav-button-{{ ai_gen_id }}" data-next aria-label="Next products">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9,18 15,12 9,6"></polyline>
              </svg>
            </button>
          </div>

          <div class="ai-clearance-dots-{{ ai_gen_id }}" data-dots>
            {% for page in (1..total_pages) %}
              <button class="ai-clearance-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-page="{{ forloop.index0 }}" aria-label="Go to page {{ forloop.index }}"></button>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% else %}
      <div class="ai-clearance-empty-state-{{ ai_gen_id }}">
        Select a collection with products to display your clearance items
      </div>
    {% endif %}
  </div>
</clearance-products-{{ ai_gen_id }}>

<script>
  (function() {
    class ClearanceProducts{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentPage = 0;
        this.totalPages = 0;
      }

      connectedCallback() {
        this.container = this.querySelector('[data-container]');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.dots = this.querySelectorAll('[data-dots] button');
        this.grids = this.querySelectorAll('.ai-clearance-products-grid-{{ ai_gen_id }}');
        
        this.totalPages = this.grids.length;
        
        if (this.totalPages > 1) {
          this.setupNavigation();
        }
        
        this.updateNavigation();
      }

      setupNavigation() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.goToPrevPage());
        }
        
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.goToNextPage());
        }
        
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToPage(index));
        });
      }

      goToPrevPage() {
        if (this.currentPage > 0) {
          this.currentPage--;
          this.updateSlider();
          this.updateNavigation();
        }
      }

      goToNextPage() {
        if (this.currentPage < this.totalPages - 1) {
          this.currentPage++;
          this.updateSlider();
          this.updateNavigation();
        }
      }

      goToPage(pageIndex) {
        this.currentPage = pageIndex;
        this.updateSlider();
        this.updateNavigation();
      }

      updateSlider() {
        if (this.container) {
          const translateX = -this.currentPage * 100;
          this.container.style.transform = `translateX(${translateX}%)`;
        }
      }

      updateNavigation() {
        if (this.prevButton) {
          this.prevButton.disabled = this.currentPage === 0;
        }
        
        if (this.nextButton) {
          this.nextButton.disabled = this.currentPage === this.totalPages - 1;
        }
        
        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentPage);
        });
      }
    }

    customElements.define('clearance-products-{{ ai_gen_id }}', ClearanceProducts{{ ai_gen_id }});
  })();
</script>

