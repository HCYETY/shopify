{% doc %}
  @prompt
    Create a section with a customizable header at the top, followed by a split layout with left and right parts. The left side should display one main product with title, price, compare-at price, and add to cart button. The right side should display four smaller products in a grid, each with title, price, compare-at price, and add to cart button. Include extensive customization settings for all parameters: section header text and styling, background colors for header and sections, text colors, font sizes for all elements, padding and margins, section heights, button colors and styles, border options, spacing controls, and any other visual parameters. Make it fully customizable with comprehensive styling options and responsive design.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-split-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.section_bg_color }};
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;}

  .ai-product-split-header-{{ ai_gen_id }} {
    background-color: {{ block.settings.header_bg_color }};
    padding: {{ block.settings.header_padding_top }}px {{ block.settings.header_padding_horizontal }}px {{ block.settings.header_padding_bottom }}px;
    margin-bottom: {{ block.settings.header_margin_bottom }}px;
    border-radius: {{ block.settings.header_border_radius }}px;{% if block.settings.header_border_width > 0 %}
      border: {{ block.settings.header_border_width }}px {{ block.settings.header_border_style }} {{ block.settings.header_border_color }};
    {% endif %}
  }

  .ai-product-split-header-text-{{ ai_gen_id }} {
    color: {{ block.settings.header_text_color }};
    font-size: {{ block.settings.header_font_size }}px;
    font-weight: {{ block.settings.header_font_weight }};
    text-align: {{ block.settings.header_text_align }};
    margin:0;
    line-height: 1.2;
  }

  .ai-product-split-content-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.content_gap }}px;
    align-items: stretch;
  }

  .ai-product-split-left-{{ ai_gen_id }} {
    flex: 1;
    background-color: {{ block.settings.left_bg_color }};
    padding: {{ block.settings.left_padding }}px;
    border-radius: {{ block.settings.left_border_radius }}px;
    {% if block.settings.left_border_width > 0 %}
      border: {{ block.settings.left_border_width }}px {{ block.settings.left_border_style }} {{ block.settings.left_border_color }};
    {% endif %}
    min-height: {{ block.settings.left_min_height }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .ai-product-split-right-{{ ai_gen_id }} {
    flex: 1;
    background-color: {{ block.settings.right_bg_color }};
    padding: {{ block.settings.right_padding }}px;
    border-radius: {{ block.settings.right_border_radius }}px;
    {% if block.settings.right_border_width > 0 %}
      border: {{ block.settings.right_border_width }}px {{ block.settings.right_border_style }} {{ block.settings.right_border_color }};
    {% endif %}
    min-height: {{ block.settings.right_min_height }}px;
  }

  .ai-product-split-main-product-{{ ai_gen_id }} {
    text-align: {{ block.settings.main_product_text_align }};
  }

  .ai-product-split-main-image-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: {{ block.settings.main_image_margin_bottom }}px;
    border-radius: {{ block.settings.main_image_border_radius }}px;
    overflow: hidden;
  }

  .ai-product-split-main-image-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-product-split-main-image-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-split-main-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-split-main-title-{{ ai_gen_id }} {
    color: {{ block.settings.main_title_color }};
    font-size: {{ block.settings.main_title_font_size }}px;
    font-weight: {{ block.settings.main_title_font_weight }};
    margin: 0 0 {{ block.settings.main_title_margin_bottom }}px;
    line-height: 1.3;
  }

  .ai-product-split-main-price-wrapper-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.main_price_margin_bottom }}px;
  }

  .ai-product-split-main-price-{{ ai_gen_id }} {
    color: {{ block.settings.main_price_color }};
    font-size: {{ block.settings.main_price_font_size }}px;
    font-weight: {{ block.settings.main_price_font_weight }};
    margin-right: 8px;
  }

  .ai-product-split-main-compare-price-{{ ai_gen_id }} {
    color: {{ block.settings.main_compare_price_color }};
    font-size: {{ block.settings.main_compare_price_font_size }}px;
    text-decoration: line-through;
    opacity: 0.7;
  }

  .ai-product-split-main-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.main_button_bg_color }};
    color: {{ block.settings.main_button_text_color }};
    font-size: {{ block.settings.main_button_font_size }}px;
    font-weight: {{ block.settings.main_button_font_weight }};
    padding: {{ block.settings.main_button_padding_vertical }}px {{ block.settings.main_button_padding_horizontal }}px;
    border: none;
    border-radius: {{ block.settings.main_button_border_radius }}px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease;
    {% if block.settings.main_button_border_width > 0 %}
      border: {{ block.settings.main_button_border_width }}px {{ block.settings.main_button_border_style }} {{ block.settings.main_button_border_color }};
    {% endif %}
  }

  .ai-product-split-main-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.main_button_hover_bg_color }};color: {{ block.settings.main_button_hover_text_color }};
  }

  .ai-product-split-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.grid_gap }}px;}

  .ai-product-split-grid-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.grid_item_bg_color }};
    padding: {{ block.settings.grid_item_padding }}px;
    border-radius: {{ block.settings.grid_item_border_radius }}px;
    text-align: {{ block.settings.grid_item_text_align }};
    {% if block.settings.grid_item_border_width > 0 %}
      border: {{ block.settings.grid_item_border_width }}px {{ block.settings.grid_item_border_style }} {{ block.settings.grid_item_border_color }};
    {% endif %}
  }

  .ai-product-split-grid-image-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: {{ block.settings.grid_image_margin_bottom }}px;
    border-radius: {{ block.settings.grid_image_border_radius }}px;
    overflow: hidden;
  }

  .ai-product-split-grid-image-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-product-split-grid-image-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-product-split-grid-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-product-split-grid-title-{{ ai_gen_id }} {
    color: {{ block.settings.grid_title_color }};
    font-size: {{ block.settings.grid_title_font_size }}px;
    font-weight: {{ block.settings.grid_title_font_weight }};
    margin: 0 0 {{ block.settings.grid_title_margin_bottom }}px;
    line-height: 1.3;
  }

  .ai-product-split-grid-price-wrapper-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.grid_price_margin_bottom }}px;
  }

  .ai-product-split-grid-price-{{ ai_gen_id }} {
    color: {{ block.settings.grid_price_color }};
    font-size: {{ block.settings.grid_price_font_size }}px;
    font-weight: {{ block.settings.grid_price_font_weight }};
    margin-right: 6px;
  }

  .ai-product-split-grid-compare-price-{{ ai_gen_id }} {
    color: {{ block.settings.grid_compare_price_color }};
    font-size: {{ block.settings.grid_compare_price_font_size }}px;
    text-decoration: line-through;
    opacity: 0.7;
  }

  .ai-product-split-grid-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.grid_button_bg_color }};
    color: {{ block.settings.grid_button_text_color }};
    font-size: {{ block.settings.grid_button_font_size }}px;
    font-weight: {{ block.settings.grid_button_font_weight }};
    padding: {{ block.settings.grid_button_padding_vertical }}px {{ block.settings.grid_button_padding_horizontal }}px;
    border: none;
    border-radius: {{ block.settings.grid_button_border_radius }}px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease;
    width: 100%;
    {% if block.settings.grid_button_border_width > 0 %}
      border: {{ block.settings.grid_button_border_width }}px {{ block.settings.grid_button_border_style }} {{ block.settings.grid_button_border_color }};
    {% endif %}
  }

  .ai-product-split-grid-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.grid_button_hover_bg_color }};
    color: {{ block.settings.grid_button_hover_text_color }};
  }

  .ai-product-split-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #999;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-product-split-content-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.mobile_content_gap }}px;
    }

    .ai-product-split-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.mobile_grid_columns }}, 1fr);
    }

    .ai-product-split-section-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_section_padding }}px;
    }

    .ai-product-split-header-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_header_padding }}px;
    }
  }
{% endstyle %}

<div class="ai-product-split-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.header_text != blank %}
    <div class="ai-product-split-header-{{ ai_gen_id }}">
      <h2 class="ai-product-split-header-text-{{ ai_gen_id }}">{{ block.settings.header_text }}</h2>
    </div>
  {% endif %}<div class="ai-product-split-content-{{ ai_gen_id }}"><div class="ai-product-split-left-{{ ai_gen_id }}"><div class="ai-product-split-main-product-{{ ai_gen_id }}">
        <div class="ai-product-split-main-image-{{ ai_gen_id }}">
          {% if block.settings.main_product and block.settings.main_product.featured_image %}
            <img
              src="{{ block.settings.main_product.featured_image | image_url: width: 600}}"
              alt="{{ block.settings.main_product.featured_image.alt | escape }}"
              loading="lazy"
              width="600"
              height="{{600 | divided_by: block.settings.main_product.featured_image.aspect_ratio | round }}"
            >
          {% else %}
            <div class="ai-product-split-main-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-apparel-1' | placeholder_svg_tag }}{% unless block.settings.main_product %}
                <div class="ai-product-split-empty-state-{{ ai_gen_id }}">
                  Select a main product
                </div>
              {% endunless %}
            </div>
          {% endif %}
        </div>

        {% if block.settings.main_product %}
          <h3 class="ai-product-split-main-title-{{ ai_gen_id }}">{{ block.settings.main_product.title }}</h3>
          <div class="ai-product-split-main-price-wrapper-{{ ai_gen_id }}">
            <span class="ai-product-split-main-price-{{ ai_gen_id }}">{{ block.settings.main_product.price | money }}</span>
            {% if block.settings.main_product.compare_at_price > block.settings.main_product.price %}
              <span class="ai-product-split-main-compare-price-{{ ai_gen_id }}">{{ block.settings.main_product.compare_at_price | money }}</span>
            {% endif %}
          </div>

          <a href="{{ block.settings.main_product.url }}" class="ai-product-split-main-button-{{ ai_gen_id }}">
            {{ block.settings.main_button_text }}
          </a>
        {% else %}
          <h3 class="ai-product-split-main-title-{{ ai_gen_id }}">Product Title</h3><div class="ai-product-split-main-price-wrapper-{{ ai_gen_id }}">
            <span class="ai-product-split-main-price-{{ ai_gen_id }}">$0.00</span>
          </div>
          <div class="ai-product-split-main-button-{{ ai_gen_id }}">
            {{ block.settings.main_button_text }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-product-split-right-{{ ai_gen_id }}">
      <div class="ai-product-split-grid-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% assign product_key = 'grid_product_' | append: i %}
          {% assign product = block.settings[product_key] %}<div class="ai-product-split-grid-item-{{ ai_gen_id }}">
            <div class="ai-product-split-grid-image-{{ ai_gen_id }}">
              {% if product and product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 300 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="300"
                  height="{{ 300 | divided_by: product.featured_image.aspect_ratio | round }}"
                >
              {% else %}
                <div class="ai-product-split-grid-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                {% unless product %}
                    <div class="ai-product-split-empty-state-{{ ai_gen_id }}">
                      Select product {{ i }}
                    </div>
                  {% endunless %}
                </div>
              {% endif %}
            </div>

            {% if product %}
              <h4 class="ai-product-split-grid-title-{{ ai_gen_id }}">{{ product.title }}</h4>
              
              <div class="ai-product-split-grid-price-wrapper-{{ ai_gen_id }}">
                <span class="ai-product-split-grid-price-{{ ai_gen_id }}">{{ product.price | money }}</span>
                {% if product.compare_at_price > product.price %}
                  <span class="ai-product-split-grid-compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                {% endif %}
              </div>

              <a href="{{ product.url }}" class="ai-product-split-grid-button-{{ ai_gen_id }}">
                {{ block.settings.grid_button_text }}
              </a>
            {% else %}
              <h4 class="ai-product-split-grid-title-{{ ai_gen_id }}">Product Title</h4>
              <div class="ai-product-split-grid-price-wrapper-{{ ai_gen_id }}">
                <span class="ai-product-split-grid-price-{{ ai_gen_id }}">$0.00</span>
              </div>
              <div class="ai-product-split-grid-button-{{ ai_gen_id }}">
                {{ block.settings.grid_button_text }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

