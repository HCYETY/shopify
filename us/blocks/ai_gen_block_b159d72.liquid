<script>
  (function() {
    class FeaturedProducts{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.carousel = this.querySelector('.ai-featured-products__carousel-{{ ai_gen_id }}');
        if (this.carousel) {
          this.setupTouchEvents();
        }
      }

      setupTouchEvents() {
        let isDown = false;
        let startX;
        let scrollLeft;

        this.carousel.addEventListener('touchstart', (e) => {
          isDown = true;
          startX = e.touches[0].pageX - this.carousel.offsetLeft;
          scrollLeft = this.carousel.scrollLeft;
        });

        this.carousel.addEventListener('touchmove', (e) => {
          if (!isDown) return;
          e.preventDefault();
          const x = e.touches[0].pageX - this.carousel.offsetLeft;
          const walk = (x - startX) * 2;
          this.carousel.scrollLeft = scrollLeft - walk;
        });

        this.carousel.addEventListener('touchend', () => {
          isDown = false;
        });
      }
    }

    customElements.define('featured-products-{{ ai_gen_id }}', FeaturedProducts{{ ai_gen_id }});
  })();
</script>

