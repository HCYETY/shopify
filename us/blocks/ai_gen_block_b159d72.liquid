{% doc %}
  @prompt
    Create a customizable section with a main section title to display top 3 featured items or products in a row on desktop. Each item should include a responsive product image that adapts to different devices, title, description, price, and call-to-action button styled as cards. The section should have settings to adjust the section width, spacing, and layout parameters. Include a customizable section title/heading at the top. The product images should be responsive and change size/aspect ratio based on the device. On mobile devices, the three items should display as a horizontal slider/carousel with swipe functionality using card-style design. Make it responsive and include customization options for colors, fonts, and styling.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-products-{{ ai_gen_id }} {
    width: 100%;
    max-width: {% if block.settings.section_width == 'full' %}100%{% elsif block.settings.section_width == 'custom' %}{{ block.settings.custom_width }}px{% else %}1200px{% endif %};
    margin: 0 auto;
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-featured-products__title-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin-bottom: {{ block.settings.title_margin_bottom }}px;
    font-weight: {{ block.settings.title_weight }};}

  .ai-featured-products__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-featured-products__card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .ai-featured-products__card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.card_hover_lift }}px);
  }

  .ai-featured-products__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    margin-bottom: {{ block.settings.image_margin_bottom }}px;overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-featured-products__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-featured-products__card-{{ ai_gen_id }}:hover .ai-featured-products__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-featured-products__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-featured-products__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-products__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
  }

  .ai-featured-products__content-{{ ai_gen_id }} {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-featured-products__product-title-{{ ai_gen_id }} {
    color: {{ block.settings.product_title_color }};
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: {{ block.settings.product_title_weight }};
    margin-bottom: {{ block.settings.product_title_margin }}px;
    line-height: 1.3;
  }

  .ai-featured-products__description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    margin-bottom: {{ block.settings.description_margin }}px;
    flex-grow: 1;
  }

  .ai-featured-products__price-{{ ai_gen_id }} {
    color: {{ block.settings.price_color }};
    font-size: {{ block.settings.price_size }}px;
    font-weight: {{ block.settings.price_weight }};
    margin-bottom: {{ block.settings.price_margin }}px;
  }

  .ai-featured-products__button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-decoration: none;
    display: inline-block;
    text-align: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-top: auto;
  }

  .ai-featured-products__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-featured-products__carousel-{{ ai_gen_id }} {
    display: none;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
    -ms-overflow-style: none;
    gap: {{ block.settings.mobile_gap }}px;
    padding-bottom: 10px;
  }

  .ai-featured-products__carousel-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-featured-products__carousel-inner-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.mobile_gap }}px;
    padding: 0 {{ block.settings.section_padding_horizontal }}px;
  }

  .ai-featured-products__carousel-card-{{ ai_gen_id }} {
    min-width: {{ block.settings.mobile_card_width }}px;
    scroll-snap-align: start;
    flex-shrink: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-featured-products__grid-{{ ai_gen_id }} {
      display: none;
    }

    .ai-featured-products__carousel-{{ ai_gen_id }} {
      display: block;
    }

    .ai-featured-products-{{ ai_gen_id }} {
      padding-left: 0;
      padding-right: 0;
    }

    .ai-featured-products__title-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.section_padding_horizontal }}px;
    }
  }
{% endstyle %}

