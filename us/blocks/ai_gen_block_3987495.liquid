{% endstyle %}

<div class="ai-product-split-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.header_text != blank %}
    <div class="ai-product-split-header-{{ ai_gen_id }}">
      <h2 class="ai-product-split-title-{{ ai_gen_id }}">{{ block.settings.header_text }}</h2>
    </div>
  {% endif %}<div class="ai-product-split-content-{{ ai_gen_id }}"><div class="ai-product-split-left-{{ ai_gen_id }}"><div class="ai-product-main-{{ ai_gen_id }}">
        <div class="ai-product-main-image-{{ ai_gen_id }}">
          {% if block.settings.main_product and block.settings.main_product.featured_image %}
            <img
              src="{{ block.settings.main_product.featured_image | image_url: width: 600}}"
              alt="{{ block.settings.main_product.featured_image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.main_product.featured_image.width }}"
              height="{{ block.settings.main_product.featured_image.height }}"
            >
          {% else %}
            <div class="ai-product-main-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
              {% unless block.settings.main_product %}
                <div class="ai-empty-state-{{ ai_gen_id }}">
                  Select a main product
                </div>
              {% endunless %}
            </div>
          {% endif %}
        </div>

        {% if block.settings.main_product %}
          <h3 class="ai-product-main-title-{{ ai_gen_id }}">{{ block.settings.main_product.title }}</h3><div class="ai-product-main-price-{{ ai_gen_id }}"><span class="ai-product-main-price-current-{{ ai_gen_id }}">{{ block.settings.main_product.price | money }}</span>
            {% if block.settings.main_product.compare_at_price > block.settings.main_product.price %}
              <span class="ai-product-main-price-compare-{{ ai_gen_id }}">{{ block.settings.main_product.compare_at_price | money }}</span>
            {% endif %}
          </div>

          <a href="{{ block.settings.main_product.url }}" class="ai-product-main-button-{{ ai_gen_id }}">
            {{ block.settings.main_button_text }}
          </a>
        {% else %}
          <h3 class="ai-product-main-title-{{ ai_gen_id }}">Product Title</h3><div class="ai-product-main-price-{{ ai_gen_id }}">
            <span class="ai-product-main-price-current-{{ ai_gen_id }}">$0.00</span>
          </div>
          <div class="ai-product-main-button-{{ ai_gen_id }}">{{ block.settings.main_button_text }}</div>
        {% endif %}
      </div>
    </div>

    <div class="ai-product-split-right-{{ ai_gen_id }}">
      <div class="ai-product-grid-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% assign product_key = 'grid_product_' | append: i %}
          {% assign product = block.settings[product_key] %}
          <div class="ai-product-item-{{ ai_gen_id }}"><div class="ai-product-item-image-{{ ai_gen_id }}">
              {% if product and product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 300 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="{{ product.featured_image.width }}"
                  height="{{ product.featured_image.height }}"
                >
              {% else %}
                <div class="ai-product-item-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if product %}
              <h4 class="ai-product-item-title-{{ ai_gen_id }}">{{ product.title }}</h4>
              <div class="ai-product-item-price-{{ ai_gen_id }}">
                <span class="ai-product-item-price-current-{{ ai_gen_id }}">{{ product.price | money }}</span>
                {% if product.compare_at_price > product.price %}
                  <span class="ai-product-item-price-compare-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                {% endif %}
              </div>

              <a href="{{ product.url }}" class="ai-product-item-button-{{ ai_gen_id }}">
                {{ block.settings.grid_button_text }}
              </a>
            {% else %}
              <h4 class="ai-product-item-title-{{ ai_gen_id }}">Product Title</h4>
              <div class="ai-product-item-price-{{ ai_gen_id }}">
                <span class="ai-product-item-price-current-{{ ai_gen_id }}">$0.00</span>
              </div>
              <div class="ai-product-item-button-{{ ai_gen_id }}">{{ block.settings.grid_button_text }}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

