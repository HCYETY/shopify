    font-weight: {{ block.settings.button_font_weight }};
    text-decoration: none;
    transition: background-color 0.3s ease, transform 0.2s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-clearance-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-1px);
  }

  .ai-clearance-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-clearance-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.8 }}px;
    }
    
    .ai-clearance-product-info-{{ ai_gen_id }} {
      padding: {{ block.settings.product_info_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<clearance-products-{{ ai_gen_id }}
  class="ai-clearance-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-clearance-container-{{ ai_gen_id }}">
    <div class="ai-clearance-header-{{ ai_gen_id }}">
      {% if block.settings.section_title != blank %}
        <h2 class="ai-clearance-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      {% endif %}
      
      {% if block.settings.section_subtitle != blank %}
        <p class="ai-clearance-subtitle-{{ ai_gen_id }}">{{ block.settings.section_subtitle }}</p>
      {% endif %}
      
      {% if block.settings.promo_text != blank %}
        <div class="ai-clearance-promo-{{ ai_gen_id }}">{{ block.settings.promo_text }}</div>
      {% endif %}</div>

    {% if block.settings.clearance_collection != blank and block.settings.clearance_collection.products.size > 0 %}
      <div class="ai-clearance-grid-{{ ai_gen_id }}">
        {% assign mobile_limit = 4 %}
        {% assign desktop_limit = 16 %}
        {% assign products_to_show = block.settings.clearance_collection.products | slice: 0, desktop_limit %}
        
        {% for product in products_to_show %}
          {% assign mobile_class = '' %}
          {% if forloop.index > mobile_limit %}
            {% assign mobile_class = 'ai-clearance-mobile-hidden-' | append: ai_gen_id %}
          {% endif %}
          
          <div class="ai-clearance-product-{{ ai_gen_id }} {{ mobile_class }}">
            <div class="ai-clearance-product-image-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="400"
                  height="400"
                >
              {% else %}
                <div class="ai-clearance-product-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
              
              {% if product.compare_at_price > product.price %}
                {% assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}<div class="ai-clearance-badge-{{ ai_gen_id }}">
                  {{ block.settings.badge_text | replace: '[percentage]', discount_percentage }}
                </div>
              {% endif %}
            </div>
            
            <div class="ai-clearance-product-info-{{ ai_gen_id }}">
              <h3 class="ai-clearance-product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3><div class="ai-clearance-price-wrapper-{{ ai_gen_id }}">
                <span class="ai-clearance-price-sale-{{ ai_gen_id }}">{{ product.price | money }}</span>
                {% if product.compare_at_price > product.price %}
                  <span class="ai-clearance-price-original-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                  {% assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                  <span class="ai-clearance-discount-{{ ai_gen_id }}">{{ discount_percentage }}% OFF</span>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      
      {% if block.settings.show_view_all_button and block.settings.view_all_link != blank %}
        <div class="ai-clearance-cta-{{ ai_gen_id }}">
          <a href="{{ block.settings.view_all_link }}" class="ai-clearance-button-{{ ai_gen_id }}">
            {{ block.settings.view_all_text }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-clearance-empty-state-{{ ai_gen_id }}">
        {% if block.settings.clearance_collection == blank %}
          Next, select a clearance collection to display products
        {% else %}
          No products found in the selected collection
        {% endif %}
      </div>
    {% endif %}
  </div>
</clearance-products-{{ ai_gen_id }}>

<script>
(function() {
  class ClearanceProducts{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.setupMobileToggle();
    }

    setupMobileToggle() {
      const style = document.createElement('style');
      style.textContent = `
        @media screen and (max-width: 749px) {
          .ai-clearance-mobile-hidden-{{ ai_gen_id }} {
            display: none;
          }
        }
      `;
      document.head.appendChild(style);
    }
  }

  customElements.define('clearance-products-{{ ai_gen_id }}', ClearanceProducts{{ ai_gen_id }});
})();
</script>

