{% doc %}
  @prompt
    Create a clearance products section with eye-catching sale badges and discounted pricing display. Layout should show 2 rows with 2 columns (4 products total) on mobile, and 4 rows with 4 columns (16 products total) on desktop. Include a "View All" button to browse the complete clearance collection. Add horizontal shaking animation for promotional messaging to highlight special offers and limited-time deals. Make the section highly customizable with settings for colors, spacing, text, and layout options.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-clearance-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.section_background_color }};
  }

  .ai-clearance-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-clearance-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_margin_bottom }}px;
  }

  .ai-clearance-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_margin_bottom }}px;
    font-weight: {{ block.settings.title_font_weight }};
  }

  .ai-clearance-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_font_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-clearance-promo-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.promo_bg_color }};
    color: {{ block.settings.promo_text_color }};
    padding: {{ block.settings.promo_padding_vertical }}px {{ block.settings.promo_padding_horizontal }}px;
    border-radius: {{ block.settings.promo_border_radius }}px;
    font-size: {{ block.settings.promo_font_size }}px;
    font-weight: {{ block.settings.promo_font_weight }};
    margin: {{ block.settings.promo_margin_top }}px 0 0;
    animation: ai-clearance-shake-{{ ai_gen_id }} 2s infinite;
  }

  @keyframes ai-clearance-shake-{{ ai_gen_id }} {
    0%, 100% { transform: translateX(0); }
    10%, 30%, 50%, 70%, 90% { transform: translateX(-2px); }
    20%, 40%, 60%, 80% { transform: translateX(2px); }
  }

  .ai-clearance-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.product_gap }}px;
    margin-bottom: {{ block.settings.grid_margin_bottom }}px;
  }

  @media screen and (min-width: 750px) {
    .ai-clearance-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .ai-clearance-product-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.product_bg_color }};
    border-radius: {{ block.settings.product_border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.product_shadow_horizontal }}px {{ block.settings.product_shadow_vertical }}px {{ block.settings.product_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.product_shadow_opacity }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-clearance-product-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.product_hover_lift }}px);
    box-shadow: {{ block.settings.product_shadow_horizontal }}px {{ block.settings.product_shadow_vertical | plus: 5 }}px {{ block.settings.product_shadow_blur | plus: 10 }}px rgba(0, 0, 0, {{ block.settings.product_shadow_opacity | plus: 0.1 }});
  }

  .ai-clearance-product-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .ai-clearance-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-clearance-product-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-clearance-product-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-clearance-badge-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.badge_position_top }}px;
    left: {{ block.settings.badge_position_left }}px;
    background-color: {{ block.settings.badge_bg_color }};
    color: {{ block.settings.badge_text_color }};
    padding: {{ block.settings.badge_padding_vertical }}px {{ block.settings.badge_padding_horizontal }}px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: {{ block.settings.badge_font_weight }};
    z-index: 2;
    transform: rotate({{ block.settings.badge_rotation }}deg);
  }

  .ai-clearance-product-info-{{ ai_gen_id }} {
    padding: {{ block.settings.product_info_padding }}px;
  }

  .ai-clearance-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_font_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 {{ block.settings.product_title_margin_bottom }}px;
    font-weight: {{ block.settings.product_title_font_weight }};
    line-height: 1.3;
  }

  .ai-clearance-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-clearance-product-title-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  .ai-clearance-price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.price_gap }}px;
    margin-bottom: {{ block.settings.price_margin_bottom }}px;
  }

  .ai-clearance-price-sale-{{ ai_gen_id }} {
    font-size: {{ block.settings.sale_price_font_size }}px;
    color: {{ block.settings.sale_price_color }};
    font-weight: {{ block.settings.sale_price_font_weight }};
  }

  .ai-clearance-price-original-{{ ai_gen_id }} {
    font-size: {{ block.settings.original_price_font_size }}px;
    color: {{ block.settings.original_price_color }};
    text-decoration: line-through;
  }

  .ai-clearance-discount-{{ ai_gen_id }} {
    background-color: {{ block.settings.discount_bg_color }};
    color: {{ block.settings.discount_text_color }};
    padding: {{ block.settings.discount_padding_vertical }}px {{ block.settings.discount_padding_horizontal }}px;
