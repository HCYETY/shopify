{% doc %}
  @prompt
    Create a customizable section that displays three products in a row. Each product should include a header/title, product title, description, price, compare-at price (crossed out), and an add to cart button. The section should have settings to adjust the section width, spacing, and other layout parameters. Make it responsive for mobile devices and include customization options for colors, fonts, and button styles.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-showcase-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-showcase-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.section_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.mobile_padding_horizontal }}px;
  }

  .ai-product-showcase-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_margin_bottom }}px;
  }

  .ai-product-showcase-title-{{ ai_gen_id }} {
    color: {{ block.settings.header_color }};
    font-size: {{ block.settings.header_font_size }}px;
    font-weight: {{ block.settings.header_font_weight }};
    margin: 0;
    text-transform: {{ block.settings.header_text_transform }};
  }

  .ai-product-showcase-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.product_spacing }}px;
  }

  .ai-product-showcase-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.product_card_bg }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
  }

  .ai-product-showcase-item-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: {{ block.settings.hover_shadow_horizontal }}px {{ block.settings.hover_shadow_vertical }}px {{ block.settings.hover_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.hover_shadow_opacity }});
  }

  .ai-product-showcase-product-title-{{ ai_gen_id }} {
    color: {{ block.settings.product_title_color }};
    font-size: {{ block.settings.product_title_font_size }}px;
    font-weight: {{ block.settings.product_title_font_weight }};
    margin: 0 0 {{ block.settings.title_margin_bottom }}px;
    text-transform: {{ block.settings.product_title_text_transform }};
  }

  .ai-product-showcase-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin-bottom: {{ block.settings.image_margin_bottom }}px;
  }

  .ai-product-showcase-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin-bottom: {{ block.settings.image_margin_bottom }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-showcase-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-showcase-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
  }

  .ai-product-showcase-description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_font_size }}px;
    margin: 0 0 {{ block.settings.description_margin_bottom }}px;
    line-height: 1.5;
  }

  .ai-product-showcase-price-container-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.price_margin_bottom }}px;
  }

  .ai-product-showcase-price-{{ ai_gen_id }} {
    color: {{ block.settings.price_color }};
    font-size: {{ block.settings.price_font_size }}px;
    font-weight: {{ block.settings.price_font_weight }};
    margin-right: 8px;
  }

  .ai-product-showcase-compare-price-{{ ai_gen_id }} {
    color: {{ block.settings.compare_price_color }};
    font-size: {{ block.settings.compare_price_font_size }}px;
    text-decoration: line-through;
    opacity: 0.7;
  }

  .ai-product-showcase-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-transform: {{ block.settings.button_text_transform }};
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    width: 100%;
  }

  .ai-product-showcase-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-product-showcase-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-product-showcase-container-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.mobile_padding_horizontal }}px;
    }

    .ai-product-showcase-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.header_font_size | times: 0.8 }}px;
    }

    .ai-product-showcase-item-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-product-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-showcase-container-{{ ai_gen_id }}">
    {% if block.settings.section_header != blank %}
      <div class="ai-product-showcase-header-{{ ai_gen_id }}">
        <h2 class="ai-product-showcase-title-{{ ai_gen_id }}">{{ block.settings.section_header }}</h2>
      </div>
    {% endif %}

    <div class="ai-product-showcase-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign product = block.settings[product_key]
        %}
        <div class="ai-product-showcase-item-{{ ai_gen_id }}">
          {% if product != blank %}
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 400 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-product-showcase-image-{{ ai_gen_id }}"
                loading="lazy"
                width="400"
                height="{{ block.settings.image_height }}"
              >
            {% else %}
              <div class="ai-product-showcase-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}

            <h3 class="ai-product-showcase-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
            {% if product.description != blank %}
              <div class="ai-product-showcase-description-{{ ai_gen_id }}">
                {{ product.description | strip_html | truncate: 100 }}
              </div>
            {% endif %}

            <div class="ai-product-showcase-price-container-{{ ai_gen_id }}">
              <span class="ai-product-showcase-price-{{ ai_gen_id }}">{{ product.price | money }}</span>
              {% if product.compare_at_price > product.price %}
                <span class="ai-product-showcase-compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
              {% endif %}
            </div>

            <a href="{{ product.url }}" class="ai-product-showcase-button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          {% else %}
            <div class="ai-product-showcase-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
              <div class="ai-product-showcase-empty-state-{{ ai_gen_id }}">
                Select a product
              </div>
            </div>
            <h3 class="ai-product-showcase-product-title-{{ ai_gen_id }}">Product title</h3>
            <div class="ai-product-showcase-description-{{ ai_gen_id }}">
              Product description will appear here when you select a product.
            </div>
            <div class="ai-product-showcase-price-container-{{ ai_gen_id }}">
              <span class="ai-product-showcase-price-{{ ai_gen_id }}">$0.00</span>
              <span class="ai-product-showcase-compare-price-{{ ai_gen_id }}">$0.00</span>
            </div>
            <div class="ai-product-showcase-button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

