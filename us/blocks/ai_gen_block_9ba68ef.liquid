<script>
  (function() {
    class FeaturedProducts{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 3;
        this.startX = 0;
        this.currentX = 0;
        this.isDragging = false;
      }

      connectedCallback() {
        this.carousel = this.querySelector('.ai-featured-products-carousel-{{ ai_gen_id }}');
        this.track = this.querySelector('.ai-featured-products-carousel-track-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-featured-products-carousel-dot-{{ ai_gen_id }}');

        if (this.carousel && this.track) {
          this.setupEventListeners();
          this.updateCarousel();
        }
      }

      setupEventListeners() {
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            this.goToSlide(index);
          });
        });

        this.track.addEventListener('touchstart', (e) => {
          this.startX = e.touches[0].clientX;
          this.isDragging = true;
        });

        this.track.addEventListener('touchmove', (e) => {
          if (!this.isDragging) return;
          this.currentX = e.touches[0].clientX;
        });

        this.track.addEventListener('touchend', () => {
          if (!this.isDragging) return;
          
          const diffX = this.startX - this.currentX;
          const threshold = 50;

          if (Math.abs(diffX) > threshold) {
            if (diffX > 0 && this.currentSlide < this.totalSlides - 1) {
              this.nextSlide();
            } else if (diffX < 0 && this.currentSlide > 0) {
              this.prevSlide();
            }
          }

          this.isDragging = false;
        });

        this.track.addEventListener('mousedown', (e) => {
          this.startX = e.clientX;
          this.isDragging = true;
          e.preventDefault();
        });

        this.track.addEventListener('mousemove', (e) => {
          if (!this.isDragging) return;
          this.currentX = e.clientX;
        });

        this.track.addEventListener('mouseup', () => {
          if (!this.isDragging) return;
          
          const diffX = this.startX - this.currentX;
          const threshold = 50;

          if (Math.abs(diffX) > threshold) {
            if (diffX > 0 && this.currentSlide < this.totalSlides - 1) {
              this.nextSlide();
            } else if (diffX < 0 && this.currentSlide > 0) {
              this.prevSlide();
            }
          }

          this.isDragging = false;
        });

        this.track.addEventListener('mouseleave', () => {
          this.isDragging = false;
        });
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateCarousel();
      }

      nextSlide() {
        if (this.currentSlide < this.totalSlides - 1) {
          this.currentSlide++;
          this.updateCarousel();
        }
      }

      prevSlide() {
        if (this.currentSlide > 0) {
          this.currentSlide--;
          this.updateCarousel();
        }
      }

      updateCarousel() {
        const slideWidth = this.track.querySelector('.ai-featured-products-carousel-slide-{{ ai_gen_id }}').offsetWidth;
        const gap = parseInt(getComputedStyle(this.track).gap) || 0;
        const offset = -(this.currentSlide * (slideWidth + gap));
        this.track.style.transform = `translateX(${offset}px)`;

        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }
    }

    customElements.define('featured-products-{{ ai_gen_id }}', FeaturedProducts{{ ai_gen_id }});
  })();
</script>

