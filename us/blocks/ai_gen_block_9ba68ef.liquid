{% doc %}
  @prompt
    Create a customizable section with a main section title to display top 3 featured items or products in a row on desktop with constrained width (not full width). Each product should include a responsive product image that adapts to different devices, product title, individual product description, price, and call-to-action button styled as cards. The section should have settings to adjust the section width with contained/constrained layout options. Include a customizable section title/heading at the top. The product images should be responsive and change size/aspect ratio based on the device. On mobile devices, the three items should display as a horizontal slider/carousel with swipe functionality using card-style design. Make it responsive and include customization options for colors, fonts, and styling.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-products-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.section_background_color }};
  }

  .ai-featured-products-container-{{ ai_gen_id }} {
    {% if block.settings.layout == 'contained' %}
      max-width: {{ block.settings.container_width }}px;
      margin: 0 auto;
      padding: 0 20px;
    {% elsif block.settings.layout == 'constrained' %}
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    {% else %}
      padding: 0 20px;
    {% endif %}
  }

  .ai-featured-products-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    margin-bottom: {{ block.settings.title_margin_bottom }}px;
  }

  .ai-featured-products-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-featured-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.card_spacing }}px;
    position: relative;
  }

  .ai-featured-products-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .ai-featured-products-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.card_hover_lift }}px);
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y | plus: 5 }}px {{ block.settings.card_shadow_blur | plus: 10 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | plus: 0.1 }});
  }

  .ai-featured-products-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    margin-bottom: {{ block.settings.image_margin_bottom }}px;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-featured-products-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-featured-products-card-{{ ai_gen_id }}:hover .ai-featured-products-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-featured-products-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-featured-products-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-products-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-featured-products-content-{{ ai_gen_id }} {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-featured-products-product-title-{{ ai_gen_id }} {
    color: {{ block.settings.product_title_color }};
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: {{ block.settings.product_title_weight }};
    margin: 0 0 {{ block.settings.product_title_margin_bottom }}px;
    line-height: 1.3;
  }

  .ai-featured-products-description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    margin: 0 0 {{ block.settings.description_margin_bottom }}px;
    flex-grow: 1;
  }

  .ai-featured-products-price-{{ ai_gen_id }} {
    color: {{ block.settings.price_color }};
    font-size: {{ block.settings.price_size }}px;
    font-weight: {{ block.settings.price_weight }};
    margin: 0 0 {{ block.settings.price_margin_bottom }}px;
  }

  .ai-featured-products-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-decoration: none;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-block;
    width: 100%;
    margin-top: auto;
  }

  .ai-featured-products-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-featured-products-carousel-{{ ai_gen_id }} {
    display: none;
    position: relative;
    overflow: hidden;
  }

  .ai-featured-products-carousel-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease;
    gap: {{ block.settings.card_spacing }}px;
  }

  .ai-featured-products-carousel-slide-{{ ai_gen_id }} {
    flex: 0 0 85%;
    max-width: 320px;
  }

  .ai-featured-products-carousel-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 20px;
  }

  .ai-featured-products-carousel-dot-{{ ai_gen_id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: #ccc;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-featured-products-carousel-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.button_background_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-featured-products-grid-{{ ai_gen_id }} {
      display: none;
    }

    .ai-featured-products-carousel-{{ ai_gen_id }} {
      display: block;
    }

    .ai-featured-products-container-{{ ai_gen_id }} {
      padding: 0 15px;
    }

    .ai-featured-products-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-featured-products-image-wrapper-{{ ai_gen_id }} {
      aspect-ratio: 1;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-featured-products-carousel-slide-{{ ai_gen_id }} {
      flex: 0 0 90%;
    }
  }
