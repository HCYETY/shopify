{% doc %}
  @prompt
    Create a customizable section with a main section title to display top 3 featured items or products in a row on desktop. Each item should include a product image, title, description, price, and call-to-action button. The section should have settings to adjust the section width, spacing, and layout parameters. Include a customizable section title/heading at the top. On mobile devices, the three items should display as a horizontal slider/carousel with swipe functionality. Make it responsive and include customization options for colors, fonts, and styling.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-products-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.section_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-featured-products__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    margin-bottom: {{ block.settings.title_margin_bottom }}px;
  }

  .ai-featured-products__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    font-weight: {{ block.settings.title_weight }};
  }

  .ai-featured-products__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.item_spacing }}px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ai-featured-products__item-{{ ai_gen_id }} {
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    padding: {{ block.settings.item_padding }}px;
    text-align: {{ block.settings.item_text_alignment }};
    border: {{ block.settings.item_border_width }}px solid {{ block.settings.item_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-featured-products__item-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_shadow_blur }}px {{ block.settings.hover_shadow_spread }}px rgba(0, 0, 0, 0.1);
  }

  .ai-featured-products__image-wrapper-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.image_margin_bottom }}px;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-featured-products__image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-featured-products__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-featured-products__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-products__content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
  }

  .ai-featured-products__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    font-weight: {{ block.settings.product_title_weight }};
    line-height: 1.3;
  }

  .ai-featured-products__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
    margin: 0;
  }

  .ai-featured-products__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: {{ block.settings.price_weight }};
    margin: 0;
  }

  .ai-featured-products__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
    text-align: center;
  }

  .ai-featured-products__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-featured-products__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 768px) {
    .ai-featured-products__grid-{{ ai_gen_id }} {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: 20px;
      padding-bottom: 10px;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .ai-featured-products__grid-{{ ai_gen_id }}::-webkit-scrollbar {
      display: none;
    }

    .ai-featured-products__item-{{ ai_gen_id }} {
      flex: 0 0 280px;
      scroll-snap-align: start;
    }

    .ai-featured-products-{{ ai_gen_id }} {
      padding-left: 10px;
      padding-right: 10px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-featured-products__item-{{ ai_gen_id }} {
      flex: 0 0 250px;
    }

    .ai-featured-products__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<featured-products-{{ ai_gen_id }}
  class="ai-featured-products-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.section_title != blank %}
    <div class="ai-featured-products__header-{{ ai_gen_id }}">
      <h2 class="ai-featured-products__title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
    </div>
  {% endif %}

  {% assign has_products = false %}
  {% if block.settings.product_1 != blank or block.settings.product_2 != blank or block.settings.product_3 != blank %}
    {% assign has_products = true %}
  {% endif %}

  {% if has_products %}
    <ul class="ai-featured-products__grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% assign product_key = 'product_' | append: i %}
        {% assign product = block.settings[product_key] %}
        
        {% if product != blank %}
          <li class="ai-featured-products__item-{{ ai_gen_id }}">
            <div class="ai-featured-products__image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-featured-products__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="400"
                  height="{{ block.settings.image_height }}"
                >
              {% else %}
                <div class="ai-featured-products__image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-featured-products__content-{{ ai_gen_id }}">
              <h3 class="ai-featured-products__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              
              {% if block.settings.show_description and product.description != blank %}
                <p class="ai-featured-products__description-{{ ai_gen_id }}">
                  {{ product.description | strip_html | truncate: 120 }}
                </p>
              {% endif %}

              {% if block.settings.show_price %}
                <div class="ai-featured-products__price-{{ ai_gen_id }}">
                  {% if product.compare_at_price > product.price %}
                    <span style="text-decoration: line-through; opacity: 0.7;">{{ product.compare_at_price | money }}</span>
                    {{ product.price | money }}
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.show_button %}
                <a
                  href="{{ product.url }}"
                  class="ai-featured-products__button-{{ ai_gen_id }}"
                >
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  {% else %}
    <div class="ai-featured-products__empty-state-{{ ai_gen_id }}">
      <p>Select up to 3 products to feature in this section</p>
    </div>
  {% endif %}
</featured-products-{{ ai_gen_id }}>

<script>
  (function() {
    class FeaturedProducts{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupMobileSwipe();
      }

      setupMobileSwipe() {
        const grid = this.querySelector('.ai-featured-products__grid-{{ ai_gen_id }}');
        if (!grid) return;

        let isDown = false;
        let startX;
        let scrollLeft;

        grid.addEventListener('mousedown', (e) => {
          if (window.innerWidth > 768) return;
          isDown = true;
          startX = e.pageX - grid.offsetLeft;
          scrollLeft = grid.scrollLeft;
          grid.style.cursor = 'grabbing';
        });

        grid.addEventListener('mouseleave', () => {
          isDown = false;
          grid.style.cursor = 'grab';
        });

        grid.addEventListener('mouseup', () => {
          isDown = false;
          grid.style.cursor = 'grab';
        });

        grid.addEventListener('mousemove', (e) => {
          if (!isDown || window.innerWidth > 768) return;
          e.preventDefault();
          const x = e.pageX - grid.offsetLeft;
          const walk = (x - startX) * 2;
          grid.scrollLeft = scrollLeft - walk;
        });

        grid.addEventListener('touchstart', (e) => {
          if (window.innerWidth > 768) return;
          startX = e.touches[0].pageX - grid.offsetLeft;
          scrollLeft = grid.scrollLeft;
        });

        grid.addEventListener('touchmove', (e) => {
          if (window.innerWidth > 768) return;
          const x = e.touches[0].pageX - grid.offsetLeft;
          const walk = (x - startX) * 2;
          grid.scrollLeft = scrollLeft - walk;
        });
      }
    }

    customElements.define('featured-products-{{ ai_gen_id }}', FeaturedProducts{{ ai_gen_id }});
  })();
</script>

