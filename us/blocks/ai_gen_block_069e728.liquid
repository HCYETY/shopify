{% doc %}
  @prompt
    Create a customizable section to display top 3 featured items or products in a row on desktop. Each item should include a product image, title, description, price, and call-to-action button. The section should have settings to adjust the section width, spacing, and layout parameters. On mobile devices, the three items should display as a horizontal slider/carousel with swipe functionality. Make it responsive and include customization options for colors, fonts, and styling.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-items-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-featured-items-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-featured-items-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-featured-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    padding: {{ block.settings.item_padding }}px;
    text-align: {{ block.settings.text_alignment }};
    transition: transform 0.3s ease;
  }

  .ai-featured-item-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
  }

  .ai-featured-item-image-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: {{ block.settings.image_margin_bottom }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-featured-item-image-{{ ai_gen_id }} img {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-featured-item-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-featured-item-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-item-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_margin_bottom }}px;
    line-height: 1.3;
  }

  .ai-featured-item-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 {{ block.settings.description_margin_bottom }}px;
    line-height: 1.5;
  }

  .ai-featured-item-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    font-weight: {{ block.settings.price_font_weight }};
    color: {{ block.settings.price_color }};
    margin: 0 0 {{ block.settings.price_margin_bottom }}px;
  }

  .ai-featured-item-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-featured-item-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};color: {{ block.settings.button_hover_text_color }};
  }

  .ai-featured-items-carousel-{{ ai_gen_id }} {
    display: none;
    position: relative;
    overflow: hidden;
  }

  .ai-featured-items-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease;
    touch-action: pan-y;
  }

  .ai-featured-items-slide-{{ ai_gen_id }} {
    flex: 0 0 85%;
    margin-right: 20px;
  }

  .ai-featured-items-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 20px;
  }

  .ai-featured-items-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #ccc;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-featured-items-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.button_background_color }};
  }

  .ai-featured-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-featured-items-grid-{{ ai_gen_id }} {
      display: none;
    }

    .ai-featured-items-carousel-{{ ai_gen_id }} {
      display: block;
    }

    .ai-featured-items-container-{{ ai_gen_id }} {
      padding: 0 15px;
    }
  }
