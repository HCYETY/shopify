{% endstyle %}

<div class="ai-split-product-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.header_text != blank %}
    <div class="ai-split-header-{{ ai_gen_id }}">
      <h2 class="ai-split-header-text-{{ ai_gen_id }}">{{ block.settings.header_text }}</h2>
    </div>
  {% endif %}

  <div class="ai-split-content-{{ ai_gen_id }}">
    <div class="ai-split-left-{{ ai_gen_id }}">
      {% if block.settings.main_product != blank %}
        <div class="ai-main-product-{{ ai_gen_id }}">
          {% if block.settings.main_product.featured_image %}
            <div class="ai-main-product-image-{{ ai_gen_id }}">
              <img
                src="{{ block.settings.main_product.featured_image | image_url: width: 600 }}"
                alt="{{ block.settings.main_product.featured_image.alt | escape }}"
                loading="lazy"
                width="600"
                height="{{ 600 | divided_by: block.settings.main_product.featured_image.aspect_ratio | round }}"
              >
            </div>
          {% endif %}

          <h3 class="ai-main-product-title-{{ ai_gen_id }}">{{ block.settings.main_product.title }}</h3>

          <div class="ai-main-product-prices-{{ ai_gen_id }}">
            <span class="ai-main-product-price-{{ ai_gen_id }}">{{ block.settings.main_product.price | money }}</span>
            {% if block.settings.main_product.compare_at_price > block.settings.main_product.price %}
              <span class="ai-main-product-compare-price-{{ ai_gen_id }}">{{ block.settings.main_product.compare_at_price | money }}</span>
            {% endif %}
          </div>

          <form action="/cart/add" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{ block.settings.main_product.selected_or_first_available_variant.id }}">
            <button type="submit" class="ai-main-add-to-cart-{{ ai_gen_id }}" {% unless block.settings.main_product.available %}disabled{% endunless %}>
              {% if block.settings.main_product.available %}
                {{ block.settings.main_button_text }}
              {% else %}
                Sold out
              {% endif %}
            </button>
          </form>
        </div>
      {% else %}
        <div class="ai-product-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
          <p>Select a main product</p>
        </div>
      {% endif %}
    </div>

    <div class="ai-split-right-{{ ai_gen_id }}">
      <div class="ai-grid-products-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% assign product_key = 'grid_product_' | append: i %}
          {% assign product = block.settings[product_key] %}

          {% if product != blank %}
            <div class="ai-grid-product-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <div class="ai-grid-product-image-{{ ai_gen_id }}">
                  <img
                    src="{{ product.featured_image | image_url: width: 300 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="300"
                    height="{{ 300 | divided_by: product.featured_image.aspect_ratio | round }}"
                  >
                </div>
              {% endif %}

              <h4 class="ai-grid-product-title-{{ ai_gen_id }}">{{ product.title }}</h4>

              <div class="ai-grid-product-prices-{{ ai_gen_id }}">
                <span class="ai-grid-product-price-{{ ai_gen_id }}">{{ product.price | money }}</span>
                {% if product.compare_at_price > product.price %}
                  <span class="ai-grid-product-compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                {% endif %}
              </div>

              <form action="/cart/add" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                <button type="submit" class="ai-grid-add-to-cart-{{ ai_gen_id }}" {% unless product.available %}disabled{% endunless %}>
                  {% if product.available %}
                    {{ block.settings.grid_button_text }}
                  {% else %}
                    Sold out
                  {% endif %}
                </button>
              </form>
            </div>
          {% else %}
            <div class="ai-product-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
              <p>Select product {{ i }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

