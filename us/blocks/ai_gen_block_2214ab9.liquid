    justify-content: center;
    height: 100%;
    color: #999;
    text-align: center;
    padding: 20px;
  }

  .ai-product-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    margin-bottom: 10px;
    opacity: 0.5;
  }

  @media screen and (max-width: 768px) {
    .ai-split-content-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-split-left-{{ ai_gen_id }},
    .ai-split-right-{{ ai_gen_id }} {
      flex: none;
    }

    .ai-grid-products-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.mobile_columns }}, 1fr);
    }
