{% style %}
.compareCards .pc {
  display: block;
}

.compareCards .md {
  display: none;
}

.compareCards-header {
  overflow: hidden;
  position: relative;
}

.compareCards-header-title {
  position: absolute;
  left: 30%;
  top: 50%;
  transform: translateY(-50%);
  aspect-ratio: 5/3;
  width: 23vw;
}

.compareCards-header-title p:first-child {
  font-size: 2vw;
  font-weight: bold;
  line-height: 2.3vw;
}

.compareCards-header-title p:last-child {
  margin-top: 1vw;
  font-weight: 400;
  font-size: 1.3vw;
  line-height: 1.5vw;
  display: flex;
  flex-flow: column;
}

.compareCards-header-img {
  aspect-ratio: 5/1;
  height: 20vw;
}

.compareCards-header-img img {
  width: 100%;
  height: 100%;
}

.compareCards-main {
  overflow: hidden;
}

.compareCards-main .titleactiver p svg {
  transform: rotate(-90deg) !important;
}

.compareCards-main-title {
  background-color: {{section.settings.star_color}};
  color: #fff;
  width: 100%;
  border-radius: 0;
  text-align: center;
  font-size: 16px;
  padding-top: 15px;
  padding-bottom: 15px;
  display: flex;
  justify-content: space-between;
  padding: 22px 0px 15px;
  cursor: pointer;
}

.compareCards-main-title p:last-child {
  margin-right: 20px;
}

.compareCards-main-title p:last-child svg {
  transform: rotate(0deg);
  transition: 0.3s all;
}

.compareCards-main-box {
  padding: 15px;
  display: none;
}

.compareCards-main-box-table {
  padding: 10px;
  font-weight: 400;
  line-height: 28px;
  font-size: 18px;
  color: #000;
  background-color: #fff;
  border: 1px solid rgba(34, 36, 38, 0.15);
  overflow-x: auto;
  text-align: left;
  border: 1px solid #dededf;
}

.compareCards-main-box-table table {
  width: 100%;
  background-color: #fff;
}

.compareCards-main-box-table table th {
  background: #f9fafb;
  font-weight: 700;
}

.compareCards-main-box-table table th,
.compareCards-main-box-table table td {
  min-width: 50px;
  padding: 10px 15px;
  text-align: inherit;
  text-align: center;
  align-content: center;
}

.compareCards-main-box-table table tr {
  transition: 0.3s all;
  border-bottom: 1px solid #dcdddd;
  background: white;
}

.compareCards-main-box-table table tr:hover {
  background: rgba(0, 0, 0, 0.05);
}

.compareCards-main-box-table table td span {
  color: #1f0000;
}

@media screen and (max-width: 1024px) {
  .pc {
    display: none !important;
  }
  .md {
    display: block !important;
  }
  .compareCards-header-title {
    position: absolute;
    left: 50%;
    top: 10%;
    transform: translateX(-50%);
    aspect-ratio: 5/3;
    width: 70vw;
  }
  .compareCards-header-title p {
    text-align: center;
  }
  .compareCards-header-title p:first-child {
    font-size: 9vw;
    font-weight: 400;
    line-height: 10vw;
  }
  .compareCards-header-title p:last-child {
    margin-top: 1vw;
    font-weight: 100;
    font-size: 3vw;
    line-height: 4vw;
  }
  .compareCards-header-img {
    height: auto !important;
    aspect-ratio: 3/4 !important;
  }
  .compareCards-header-img img {
    width: 100%;
    height: 100%;
  }
}

@media screen and (max-width: 524px) {
  .compareCards-header-title p:first-child {
    font-size: 40px;
    font-weight: 400;
    line-height: 45px;
  }
  .compareCards-header-title p:last-child {
    margin-top: 1vw;
    font-weight: 100;
    font-size: 16px;
    line-height: 18px;
  }
  .compareCards-header-img {
    height: auto !important;
    aspect-ratio: 3/4 !important;
  }
  .compareCards-header-img img {
    width: 100%;
    height: 100%;
  }
  .compareCards-main-title {
    padding: 10px 0;
  }
}

@media screen and (max-width: 400px) {
  .compareCards-header-title p:first-child {
    font-size: 35px;
    font-weight: 400;
    line-height: 45px;
  }
  .compareCards-header-title p:last-child {
    margin-top: 1vw;
    font-weight: 100;
    font-size: 12px;
    line-height: 18px;
  }
  .compareCards-header-img {
    height: auto !important;
    aspect-ratio: 3/4 !important;
  }
  .compareCards-header-img img {
    width: 100%;
    height: 100%;
  }
}

