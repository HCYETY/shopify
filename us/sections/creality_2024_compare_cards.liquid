<script>
  $(function () {
    $(".compareCards-main-title").on("click", function () {
      if ($(this).attr("class").includes("titleactiver")) {
        $(this).removeClass("titleactiver");
        $(".compareCards-main-box").slideUp();
      } else {
        $(this).addClass("titleactiver");
        $(".compareCards-main-box").slideDown();
      }
    });
  });
</script>
