<script defer>
  document.addEventListener('DOMContentLoaded', function () {
    const tabsContainer = document.getElementById('s5TabsContainer');
    const tabs = document.querySelectorAll('.s5-tab');
    const sections = document.querySelectorAll('.s5-content-section');


    // åˆå§‹ä½ç½®ï¼Œç”¨äºç¡®å®šä½•æ—¶å›ºå®šå¯¼èˆª
    const tabsContainerOffset = tabsContainer.getBoundingClientRect().top + window.pageYOffset;
    let tabsContainerInitialHeight = tabsContainer.offsetHeight;
    let placeholderElement = null;

    // æ·»åŠ ä¸€ä¸ªå˜é‡ç”¨äºæ§åˆ¶æ˜¯å¦ç›‘å¬æ»šåŠ¨äº‹ä»¶
    let isScrollListenerEnabled = true;

    // è®¡ç®—æ€»åç§»é‡çš„è¾…åŠ©å‡½æ•°
    function calculateTotalOffset() {
      try {
        const headerElement = document.querySelector('#home-s-header');
        const mobileHeaderElement = document.querySelector('#home-s-header-mobile');
        const navbarElement = document.querySelector('.nav-bar-container');
        const s5tabsElement = document.querySelector('.s5-tabs-container');
        
        const headerHeight = headerElement ? 
          Number(getComputedStyle(headerElement).getPropertyValue('--header-height').trim().replace('px', '')) || 0 : 0;
        
        const mobileHeaderHeight = mobileHeaderElement ? 
          Number(getComputedStyle(mobileHeaderElement).getPropertyValue('--s-header-m-height').trim().replace('px', '')) || 0 : 0;
        
        const navbarHeight = navbarElement ? navbarElement.offsetHeight : 0;
        const s5tabsHeight = s5tabsElement ? s5tabsElement.offsetHeight : 0;
        
        return headerHeight + mobileHeaderHeight + navbarHeight + s5tabsHeight;
      } catch (error) {
        console.warn('è®¡ç®—å¤´éƒ¨åç§»é‡æ—¶å‡ºé”™:', error);
        return 0;
      }
    }

    // å›ºå®šå¯¼èˆªæ åŠŸèƒ½
    function checkStickyState() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      
      if (scrollTop >= tabsContainerOffset) {
        // åªæœ‰åœ¨è¿˜æ²¡æœ‰æ·»åŠ stickyç±»æ—¶æ‰åˆ›å»ºå ä½å…ƒç´ 
        if (!tabsContainer.classList.contains('s5-tabs-sticky')) {
          // æ·»åŠ ä¸€ä¸ªå ä½å…ƒç´ ï¼Œé˜²æ­¢å†…å®¹è·³åŠ¨
          if (!placeholderElement) {
            placeholderElement = document.createElement('div');
            placeholderElement.style.height = tabsContainerInitialHeight + 'px';
            placeholderElement.style.width = '100%';
            tabsContainer.parentNode.insertBefore(placeholderElement, tabsContainer);
          }
          tabsContainer.classList.add('s5-tabs-sticky');
        }
      } else {
        // ç§»é™¤stickyç±»
        tabsContainer.classList.remove('s5-tabs-sticky');
        
        // ç§»é™¤å ä½å…ƒç´ 
        if (placeholderElement && placeholderElement.parentNode) {
          placeholderElement.parentNode.removeChild(placeholderElement);
          placeholderElement = null;
        }
      }
    }

    // åˆå§‹æ£€æŸ¥ä¸€æ¬¡
    checkStickyState();

    // ç›‘å¬æ»šåŠ¨äº‹ä»¶
    window.addEventListener('scroll', function() {
      checkStickyState();
    });

    // ç›‘å¬çª—å£å¤§å°å˜åŒ–ï¼Œé‡æ–°è®¡ç®—ä½ç½®
    window.addEventListener('resize', function() {
      if (!tabsContainer.classList.contains('s5-tabs-sticky')) {
        tabsContainerOffset = tabsContainer.getBoundingClientRect().top + window.pageYOffset;
      }
      tabsContainerInitialHeight = tabsContainer.offsetHeight;
      if (placeholderElement) {
        placeholderElement.style.height = tabsContainerInitialHeight + 'px';
      }
      checkStickyState();
    });

    // ç‚¹å‡»é€‰é¡¹å¡åˆ‡æ¢
    tabs.forEach((tab) => {
      tab.addEventListener('click', function (ev) {
        try {
          // ç§»é™¤æ‰€æœ‰æ´»åŠ¨çŠ¶æ€
          tabs.forEach((t) => t.classList.remove('active'));

          // æ·»åŠ å½“å‰æ´»åŠ¨çŠ¶æ€
          ev.currentTarget.classList.add('active');

          // è·å–ç›®æ ‡éƒ¨åˆ†ID
          const targetId = ev.currentTarget.getAttribute('data-target');
          const targetSection = document.getElementById(targetId);

          if (!targetSection) {
            console.warn(`æœªæ‰¾åˆ°ç›®æ ‡section: ${targetId}`);
            return;
          }

          // ä¸´æ—¶ç¦ç”¨æ»šåŠ¨ç›‘å¬ï¼Œé˜²æ­¢æ»šåŠ¨æ—¶activeçŠ¶æ€è·³è·ƒ
          isScrollListenerEnabled = false;

          // è®¡ç®—æ€»åç§»é‡
          const totalOffset = calculateTotalOffset();
          
          // è·å–ç›®æ ‡sectionçš„headlineå®¹å™¨
          const headlineContainer = targetSection.querySelector('.s5-headline-container');
          const targetElement = headlineContainer || targetSection;
          
          // è®¡ç®—ç›®æ ‡ä½ç½®ï¼Œç¡®ä¿headlineå®¹å™¨åœ¨è§†å›¾ä¸­æ­£ç¡®æ˜¾ç¤ºï¼Œæ·»åŠ é¢å¤–åç§»ç¡®ä¿æ ‡é¢˜å®Œå…¨å¯è§
          const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset - totalOffset - 20;

          // æ»šåŠ¨åˆ°è®¡ç®—åçš„ä½ç½®
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth',
          });

          // æ»šåŠ¨å®Œæˆåé‡æ–°å¯ç”¨æ»šåŠ¨ç›‘å¬
          setTimeout(() => {
            isScrollListenerEnabled = true;
          }, 800); // è®¾ç½®ä¸€ä¸ªé€‚å½“çš„å»¶è¿Ÿï¼Œç­‰å¾…æ»šåŠ¨åŠ¨ç”»å®Œæˆ
        } catch (error) {
          console.error('ç‚¹å‡»æ ‡ç­¾é¡µæ—¶å‡ºé”™:', error);
          isScrollListenerEnabled = true; // ç¡®ä¿æ»šåŠ¨ç›‘å¬é‡æ–°å¯ç”¨
        }
      });
    });

    // æ»šåŠ¨æ—¶æ›´æ–°æ´»åŠ¨é€‰é¡¹å¡ï¼ˆæ·»åŠ é˜²æŠ–ä¼˜åŒ–ï¼‰
    let scrollTimeout;
    window.addEventListener('scroll', function () {
      // åªæœ‰å½“æ»šåŠ¨ç›‘å¬å¯ç”¨æ—¶æ‰æ›´æ–°æ´»åŠ¨æ ‡ç­¾
      if (!isScrollListenerEnabled) return;

      // æ¸…é™¤ä¹‹å‰çš„å®šæ—¶å™¨ï¼Œå®ç°é˜²æŠ–
      clearTimeout(scrollTimeout);
      
      scrollTimeout = setTimeout(() => {
        try {
          let currentTab = '';
          
          // è®¡ç®—æ€»åç§»é‡ï¼ŒåŠ ä¸Šç¼“å†²åŒº
          const totalOffset = calculateTotalOffset() + 10;

          sections.forEach((section) => {
            const sectionTop = section.getBoundingClientRect().top;
            const sectionBottom = section.getBoundingClientRect().bottom;

            // è€ƒè™‘æ‰€æœ‰å¤´éƒ¨å…ƒç´ é«˜åº¦åˆ¤æ–­éƒ¨åˆ†æ˜¯å¦åœ¨è§†å›¾ä¸­
            if (sectionTop < totalOffset && sectionBottom > totalOffset) {
              currentTab = section.getAttribute('id');
            }
          });

          if (currentTab) {
            tabs.forEach((tab) => {
              tab.classList.remove('active');
              if (tab.getAttribute('data-target') === currentTab) {
                tab.classList.add('active');
              }
            });
          }
        } catch (error) {
          console.warn('æ›´æ–°æ´»åŠ¨æ ‡ç­¾æ—¶å‡ºé”™:', error);
        }
      }, 50); // 50msé˜²æŠ–å»¶è¿Ÿ
    });
  });
</script>

