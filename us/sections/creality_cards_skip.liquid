<style>
#{{ section.id }} .skip-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.04vw;
}

#{{ section.id }} .skip-card {
  background: #F8F8F8;
  border-radius: 0.63vw;
  padding: 1.56vw;
  transition: all 0.3s ease;
}
#{{ section.id }} .skip-card:hover {
  background: #fff;
  box-shadow: 0 0.52vw 1.04vw rgba(0, 0, 0, 0.1);
}
#{{ section.id }} .skip-card .icon {
  width: 2.5vw;
  height: 2.5vw;
  margin: 0 auto 1.04vw;
}
#{{ section.id }} .skip-card .icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
#{{ section.id }} .skip-card h4 {
  margin-bottom: 0.52vw;
}
#{{ section.id }} .skip-card p {
  color: #6A6A6A;
  margin-bottom: 1.04vw;
}
#{{ section.id }} .skip-card a {
  color: var(--themeStyle-color);
  font-size: 0.73vw;
}
#{{ section.id }} .skip-card a:hover {
  text-decoration: underline;
}  
@media (max-width: 960px) {
  #{{ section.id }} .skip-card {
    padding: 2.67vmin;
  }
  #{{ section.id }} .skip-card .icon {
    width: 4.8vmin;
    height: 4.8vmin;
    margin: 0 auto 2.13vmin;
  }
  #{{ section.id }} .skip-card h4 {
    margin-bottom: 1.07vmin;
  }
  #{{ section.id }} .skip-card p {
    margin-bottom: 2.13vmin;
  }
}
</style>

<div class="cr-common cr-section-skip cr-section-row" id="{{ section.id }}">
    <div class="cr-section-column">
        <div class="skip-grid">
            {% for block in section.blocks %}
                <div class="skip-card">
                    <div class="icon">
                        <img src="{{ block.settings.icon | img_url: '100x' }}" alt="{{ block.settings.title }}">
                    </div>
                    <h4>{{ block.settings.title }}</h4>
                    <p>{{ block.settings.description }}</p>
                    <a href="{{ block.settings.link }}">View More >></a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Skip Card Section",
  "settings": [],
  "blocks": [
    {
      "type": "skip_card",
      "name": "Skip Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Software"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "The public beta version is currently available for download."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "cr-kkip-card",
      "blocks": [
        {
          "type": "skip_card",
          "settings": {
            "icon": "shopify://shop_images/hardware-icon.svg",
            "title": "Hardware",
            "description": "Check out our latest hardware offerings.",
            "link": "#"
          }
        }
      ]
    }
  ]
}
{% endschema %}