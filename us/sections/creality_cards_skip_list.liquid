<style>
.skipList-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 1.04vw;
  background: #fff;
  border-radius: 0.63vw;
  padding: 2.08vw;
  box-shadow: 0 0.21vw 1.04vw rgba(0, 0, 0, 0.05);
}

.skipList-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 1.04vw;
  border-right: 1px solid #E5E5E5;
}
.skipList-item:last-child {
  border-right: none;
}
.skipList-item .icon {
  width: 2.5vw;
  height: 2.5vw;
  margin-bottom: 0.83vw;
}
.skipList-item .icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.skipList-item h4 {
  margin-bottom: 0.42vw;
  color: #333;
}
.skipList-item a {
  color: var(--themeStyle-color);
  font-size: 0.73vw;
  transition: opacity 0.3s ease;
}
.skipList-item a:hover {
  opacity: 0.8;
}
@media (max-width: 960px) {
  .skipList-grid {
    grid-template-columns: repeat(2, 1fr);
    padding: 2.67vmin;
  }
  .skipList-item {
    padding: 2.13vmin;
    border-right: none;
    border-bottom: 1px solid #E5E5E5;
  }
  .skipList-item:nth-last-child(-n+2) {
    border-bottom: none;
  }
  .skipList-item .icon {
    width: 4.8vmin;
    height: 4.8vmin;
    margin-bottom: 1.6vmin;
  }
  .skipList-item h4 {
    margin-bottom: 0.8vmin;
  }
}
</style>

<div class="cr-common cr-section-skipList cr-section-row">
  <div class="cr-section-column">
    <div class="skipList-grid">
      {% for block in section.blocks %}
        <div class="skipList-item" {{ block.shopify_attributes }}>
          <div class="icon">
            {% if block.settings.icon != blank %}
              <img src="{{ block.settings.icon | img_url: '100x' }}" alt="{{ block.settings.title }}">
            {% else %}
              <img src="https://via.placeholder.com/100" alt="Placeholder">
            {% endif %}
          </div>
          <h4>{{ block.settings.title }}</h4>
          <a href="{{ block.settings.link_url }}">{{ block.settings.link_text }}</a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "SkipList Section",
  "settings": [],
  "blocks": [
    {
      "type": "skipList_item",
      "name": "SkipList Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Link Text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "cr-skip-list",
      "blocks": [
        {
          "type": "skipList_item",
          "settings": {
            "icon": "shopify:\/\/shop_images\/phone-icon.svg",
            "title": "Call",
            "link_text": "+001 626 239 3346",
            "link_url": "tel:+001 626 239 3346"
          }
        }
      ]
    }
  ]
}
{% endschema %}