<div class="double-collection" data-id="{{ section.settings.bind }}">
    <div class="wrapper">
        {% for block in section.blocks %}
            <div class="part-wrapper">
                <h2>{{ block.settings.title }}</h2>
                <div class="part">
                    {% if block.type == "collection" %}
                        {% assign collection = collections[block.settings.collection] %}
                        {% if collection != blank %}
                            <div class="swiper-container" id="swiper-{{ block.id }}">
                                <div class="swiper-wrapper">
                                    {% for product in collection.products  %}
                                        <div class="swiper-slide">
                                            <div class="product-card">
                                                {% assign discount = product.compare_at_price | minus: product.price %}
                                                {% assign discount_percentage = discount | times: 100 | divided_by: product.compare_at_price | round %}
                                                {% if product.compare_at_price > product.price %}
                                                    <div class="sale-count">
                                                        Save {{ discount_percentage }}%
                                                    </div>
                                                {% endif %}
                                                <div class="card">
                                                    <div class="top">
                                                        <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
                                                    </div>
                                                    <div class="bottom">
                                                        <div class="price">
                                                            <div class="new-price">
                                                                {{ product.price | money }}
                                                            </div>
                                                            {% if product.compare_at_price > product.price %}
                                                                <s class="old-price">
                                                                    {{ product.compare_at_price | money }}
                                                                </s>
                                                            {% endif %}
                                                        </div>
                                                        <div class="btns">
                                                            {%- if settings.show_quick_view and settings.product_quick_view_type == 'default' -%}
                                                                <div class="card-quickview">
                                                                    <button type="button" title="{{ 'product.quick_view' | t }}" class="quickview-button button" data-product-id="{{ product.id }}" data-open-quick-view-popup data-product-handle="{{ product.handle }}">{{ 'product.quick_view' | t }}</button>
                                                                </div>
                                                            {%- endif -%}
                                        
                                                            {%- if settings.show_action or settings.show_compare -%}
                                                                <div class="card-action has-compare{% if settings.show_product_marquee %} has-marquee{% endif %}">
                                                                    {%- if settings.show_action -%}
                                                                        {% render 'add-to-cart-form', product: product, id: 'form', position: position, sectionId: sectionId %}
                                                                    {%- endif -%}
                                                                </div>
                                                            {%- endif -%}
                                                            {%- if settings.show_product_marquee -%}
                                                                {%- render 'product-card-marquee', product: product -%}     
                                                            {%- endif -%}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="desc">{{ product.title }}</div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                              
                                <div class="swiper-pagination"></div>
                                <!-- Add Navigation -->
                                <div class="swiper-button-next">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
                                </div>
                                <div class="swiper-button-prev">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    {% for block in section.blocks %}
        {% if block.type == "collection" %}
            new Swiper('#shopify-section-{{section.id}} #swiper-{{ block.id }}', {
                slidesPerView: 2,
                spaceBetween: 20,
                loop: true,
                 autoplay: {
                  delay: 5000,
                  disableOnInteraction: false, 
                },
                navigation: {
                    nextEl: '#shopify-section-{{section.id}} #swiper-{{ block.id }} .swiper-button-next',
                    prevEl: '#shopify-section-{{section.id}} #swiper-{{ block.id }} .swiper-button-prev',
                },
            });
        {% endif %}
    {% endfor %}
});
</script>

