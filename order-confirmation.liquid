<body>
<table class="body">
    <tr>
        <td style="display: flex; gap: 24px; flex-direction: column;">
            <table class="header row" style="margin: 40px 0 0 0">
                <tr>
                    <td class="header__cell">
                        <center>

                            <table class="container">
                                <tr>
                                    <td>

                                        <div class=" falcon-header">
                                            <div class="shop-name__cell" style="text-align: center;">
                                                <a href="https://uk.crealityfalcon.com/">
                                                    <img src="https://cdn.shopify.com/s/files/1/0799/8714/7049/files/logo.png?v=1755582950"
                                                         alt="{{ shop.name }}" width="144px">
                                                </a>
                                            </div>

                                            <div class="falcon-nav">
                                                <a href="https://uk.crealityfalcon.com/collections/engraver"
                                                   class="top-link">Laser Engraver</a>
                                                <a href="https://uk.crealityfalcon.com/collections/accessories"
                                                   class="top-link">Accessories</a>
                                                <a href="https://uk.crealityfalcon.com/pages/materials-sale-for-laser-engraver"
                                                   class="top-link">Materials</a>
                                            </div>
                                        </div>

                                    </td>
                                </tr>
                            </table>

                        </center>
                    </td>
                </tr>
            </table>

            <table class="row content">
                <tr>
                    <td class="content__cell" style="padding: 0;">
                        <center>
                            <table class="container">
                                <tr>
                                    <td>

                                        <div class="big__text">{{ email_title }}</div>
                                        <p>{{ email_body }}</p>
                                        {% assign transaction_count = transactions | size %}
                                        {% if transaction_count > 0 %}
                                            {% for transaction in transactions %}
                                                {% if transaction.show_buyer_pending_payment_instructions? %}
                                                    <p> {{ transaction.buyer_pending_payment_notice }} </p>
                                                    <p>
                                                    <table class="row">
                                                        <tr>
                                                            {% for instruction in transaction.buyer_pending_payment_instructions %}
                                                                <td>{{ instruction.header }}</td>
                                                            {% endfor %}
                                                            <td>Amount</td>
                                                        </tr>
                                                        <tr>
                                                            {% for instruction in transaction.buyer_pending_payment_instructions %}
                                                                <td>{{ instruction.value }}</td>
                                                            {% endfor %}
                                                            <td>{{ transaction.amount | money }}</td>
                                                        </tr>
                                                    </table>
                                                    </p>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}

                                        {% if order_status_url %}
                                            <table class="row actions">
                                                <tr>
                                                    <td class="empty-line">&nbsp;</td>
                                                </tr>
                                                <tr>
                                                    <td class="actions__cell">
                                                        <table class="row button main-action-cell border">
                                                            <tr style="display: flex; gap: 8px; padding-bottom: 40px;">
                                                                <td class="button__cell"
                                                                    style="background: transparent; flex: 1;"><a
                                                                            href="{{ order_status_url }}"
                                                                            class="button__text">View your order</a>
                                                                </td>
                                                                {% if shop.url %}
                                                                    <td class="link__cell" style="flex: 1;"><a
                                                                                href="{{ shop.url }}"
                                                                                class="sub_button__text">Visit our
                                                                            store</a></td>
                                                                {% endif %}
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>

                                        {% else %}
                                            {% if shop.url %}
                                                <table class="row actions border">
                                                    <tr>
                                                        <td class="actions__cell">
                                                            <table class="button main-action-cell">
                                                                <tr>
                                                                    <td class="button__cell"><a href="{{ shop.url }}"
                                                                                                class="button__text">Visit
                                                                            our store</a></td>
                                                                </tr>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                </table>
                                            {% endif %}

                                        {% endif %}

                                    </td>
                                </tr>
                            </table>
                        </center>
                    </td>
                </tr>
            </table>

            <table class="row section">
                <tr>
                    <td class="section__cell" style="padding: 0;">
                        <center>
                            <table class="container border">
                                <tr>
                                    <td style="padding-bottom: 40px;">
                                        <div class="big__text">Order details</div>
                                        <table class="order-details-table">
                                            <tr class="order-details-row">
                                                <td class="key regular__text">Order ID:</td>
                                                <td class="regular__text value">{{ order_name }}</td>
                                            </tr>
                                            <tr class="order-details-row order-details-row--spaced">
                                                <td class="key regular__text">Order Date:</td>
                                                <td class="regular__text value">{{ order.created_at | date: '%d %B %Y, %H:%M:%S' }}</td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </center>
                    </td>
                </tr>
            </table>


            <table class="row section">
                <tr>
                    <td class="section__cell" style="padding: 0px;">
                        <center>
                            <table class="container">
                                <tr>
                                    <td>
                                        <div class="big__text">Order summary</div>
                                    </td>
                                </tr>
                            </table>
                            <table class="container">
                                <tr>
                                    <td>

                                        {% if has_split_cart %}

                                        <table class="row">
                                            {% for line in subtotal_line_items %}
                                            {% unless line.delivery_agreement %}
                                            {% if line.groups.size == 0 %}
                                            {% assign legacy_separator = true %}

                                            {% comment %} Skip child add-ons since they will be rendered under the parent line item {% endcomment %}
                                            {% unless line.nested_line_child? %}

                                            {% assign is_parent = false %}
                                            {% if line.bundle_parent? or line.nested_line_parent? %}
                                                {% assign is_parent = true %}
                                            {% endif %}

                                            <tr class="order-list__item">
                                                <td class="order-list__item__cell">
                                                    <table>

                                                        {% if false and is_parent %}
                                                            <td class="order-list__parent-image-cell">
                                                                {% if line.image %}
                                                                    <img src="{{ line | img_url: 'compact_cropped' }}"
                                                                         align="left" width="60" height="60"
                                                                         class="order-list__product-image no-border"/>
                                                                {% else %}
                                                                    <div class="order-list__no-image-cell">
                                                                        <img src="{{ 'notifications/no-image.png' | shopify_asset_url }}"
                                                                             align="left" width="60" height="60"
                                                                             class="order-list__no-product-image no-border"/>
                                                                    </div>
                                                                {% endif %}
                                                            </td>
                                                        {% else %}
                                                            <td class="order-list__image-cell">
                                                                {% if line.image %}
                                                                    <img src="{{ line | img_url: 'compact_cropped' }}"
                                                                         align="left" width="60" height="60"
                                                                         class="order-list__product-image no-border"/>
                                                                {% else %}
                                                                    <div class="order-list__no-image-cell">
                                                                        <img src="{{ 'notifications/no-image.png' | shopify_asset_url }}"
                                                                             align="left" width="60" height="60"
                                                                             class="order-list__no-product-image no-border"/>
                                                                    </div>
                                                                {% endif %}
                                                            </td>
                                                        {% endif %}
                                                        <td class="order-list__product-description-cell">
                                                            <div style="display: flex; flex-direction: column; gap: 8px;">
                                                                {% if line.presentment_title %}
                                                                    {% assign line_title = line.presentment_title %}
                                                                {% elsif line.title %}
                                                                    {% assign line_title = line.title %}
                                                                {% else %}
                                                                    {% assign line_title = line.product.title %}
                                                                {% endif %}
                                                                {% if line.quantity < line.quantity %}
                                                                    {% capture line_display %}
                                                                        {{ line.quantity }} of {{ line.quantity }}
                                                                    {% endcapture %}
                                                                {% else %}
                                                                    {% assign line_display = line.quantity %}
                                                                {% endif %}

                                                                <span class="order-list__item-title price-bold price-bold">{{ line_title }}</span>

                                                                {% if line.variant.title != 'Default Title' and is_parent == false %}
                                                                    <span class="order-list__item-variant">{{ line.variant.title }}</span>
                                                                {% elsif line.variant.title != 'Default Title' and line.nested_line_parent? %}
                                                                    <span class="order-list__item-variant">{{ line.variant.title }}</span>
                                                                {% elsif line.variant.title != 'Default Title' and line.bundle_parent? and false == false %}
                                                                    <span class="order-list__item-variant">{{ line.variant.title }}</span>
                                                                {% endif %}

                                                                {% if false %}
                                                                    {% for child_line in line.bundle_components %}

                                                                        {% if true %}
                                                                            {% assign css_class = 'order-list__bundle-item' %}
                                                                        {% else %}
                                                                            {% assign css_class = 'order-list__deliverable-item_abandoned' %}
                                                                        {% endif %}

                                                                        <table>
                                                                            <tr class="order-list__item">
                                                                                <td class="{{ css_class }}">
                                                                                    <table>
                                                                                        <td class="order-list__image-cell">
                                                                                            {% if child_line.image %}
                                                                                                <img src="{{ child_line | img_url: 'compact_cropped' }}"
                                                                                                     align="left"
                                                                                                     width="40"
                                                                                                     height="40"
                                                                                                     class="order-list__product-image small no-border"/>
                                                                                            {% else %}
                                                                                                <div class="order-list__no-image-cell small">
                                                                                                    <img src="{{ 'notifications/no-image.png' | shopify_asset_url }}"
                                                                                                         align="left"
                                                                                                         width="40"
                                                                                                         height="40"
                                                                                                         class="order-list__no-product-image small no-border"/>
                                                                                                </div>
                                                                                            {% endif %}
                                                                                        </td>

                                                                                        <td class="order-list__product-description-cell">
                                                                                            <div style="display: flex; flex-direction: column; gap: 8px;">
                                                                                                {% if child_line.product.title %}
                                                                                                    {% assign item_title = child_line.product.title %}
                                                                                                {% else %}
                                                                                                    {% assign item_title = child_line.title %}
                                                                                                {% endif %}

                                                                                                {% assign item_display = child_line.quantity %}

                                                                                                <span class="order-list__item-title price-bold price-bold">{{ item_title }}</span>

                                                                                                {% if child_line.variant.title != 'Default Title' %}
                                                                                                    <span class="order-list__item-variant">{{ child_line.variant.title }}</span>
                                                                                                {% endif %}
                                                                                            </div>
                                                                                        </td>

                                                                                        <td class="number-cell">
                                                                                            <span class="number price-bold">&times;{{ item_display }}</span>
                                                                                        </td>
                                                                                    </table>
                                                                                </td>
                                                                            </tr>
                                                                        </table>
                                                                    {% endfor %}
                                                                {% else %}
                                                                    {% for group in line.groups %}
                                                                        {% if group.deliverable? %}
                                                                            <span class="order-list__item-variant">For: {{ group.display_title }}</span>
                                                                        {% else %}
                                                                            <span class="order-list__item-variant">Part of: {{ group.display_title }}</span>
                                                                        {% endif %}
                                                                    {% endfor %}
                                                                {% endif %}

                                                                {% if line.gift_card and line.properties["__shopify_send_gift_card_to_recipient"] %}
                                                                    {% for property in line.properties %}
                                                                        {% assign property_first_char = property.first | slice: 0 %}
                                                                        {% if property.last != blank and property_first_char != '_' %}
                                                                            <div class="order-list__item-property">
                                                                                <dt>{{ property.first }}:</dt>
                                                                                <dd>
                                                                                    {% if property.last contains '/uploads/' %}
                                                                                        <a href="{{ property.last }}"
                                                                                           class="link" target="_blank">
                                                                                            {{ property.last | split: '/' | last }}
                                                                                        </a>
                                                                                    {% else %}
                                                                                        {{ property.last }}
                                                                                    {% endif %}
                                                                                </dd>
                                                                            </div>
                                                                        {% endif %}
                                                                    {% endfor %}

                                                                {% endif %}

                                                                {% if line.selling_plan_allocation %}
                                                                    <span class="order-list__item-variant">{{ line.selling_plan_allocation.selling_plan.name }}</span>

                                                                {% endif %}

                                                                {% if line.refunded_quantity > 0 %}
                                                                    <span class="order-list__item-refunded">Refunded</span>
                                                                {% endif %}

                                                                {% if line.discount_allocations %}
                                                                    {% for discount_allocation in line.discount_allocations %}
                                                                        {% if discount_allocation.discount_application.target_selection != 'all' %}
                                                                            <span class="order-list__item-discount-allocation key regular__text">
                                                                      Coupon Code&nbsp;:&nbsp;
                                                                      <span>
                                                                        {{ discount_allocation.discount_application.title | upcase }}
                                                                        (-{{ discount_allocation.amount | money }})
                                                                      </span>
                                                                    </span>
                                                                        {% endif %}
                                                                    {% endfor %}
                                                                {% endif %}


                                                                <div class="price-pc-show">
                                                                    <div style="display: flex; align-items: center; gap: 4px;">
                                                                        <p class="order-list__item-price price-bold"
                                                                           style="margin: 0;">
                                                                            {% if component.original_line_price != component.final_line_price %}
                                                                                <del class="order-list__item-original-price price-del">{{ component.original_line_price | money }}</del>
                                                                            {% endif %}
                                                                        <p class="order-list__item-price price-bold">
                                                                            {% if component.final_line_price > 0 %}
                                                                                {{ component.final_line_price | money }}
                                                                            {% else %}
                                                                                Free
                                                                            {% endif %}
                                                                        </p>
                                                                        </p>
                                                                    </div>
                                                                </div>


                                                                {% if false and is_parent %}
                                                                <div class="order-list__parent-price-cell price-pc-show">
                                                                    {% else %}
                                                                    <div class="order-list__price-cell price-pc-show">
                                                                        {% endif %}
                                                                        <div style="display: flex; align-items: center; gap: 4px;">
                                                                            <p class="order-list__item-price price-bold">
                                                                                {% if line.final_line_price > 0 %}
                                                                                {{ line.final_line_price | money }}
                                                                                {% if line.unit_price_measurement %}
                                                                            <div class="order-list__unit-price">
                                                                                {{- line.unit_price | unit_price_with_measurement: line.unit_price_measurement -}}
                                                                            </div>
                                                                            {% endif %}
                                                                            {% else %}
                                                                                Free
                                                                            {% endif %}
                                                                            </p>

                                                                            {% if line.original_line_price != line.final_line_price %}
                                                                                <del class="order-list__item-original-price price-del">{{ line.original_line_price | money }}</del>
                                                                            {% endif %}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>


                                                        <td>
                                                            <span class="order-list__item-title price-bold">&times;{{ line_display }}</span>
                                                        </td>

                                                    {% if false and is_parent %}
                                                    <td class="order-list__parent-price-cell price-mb-show">
                                                    {% else %}
                                                        <td class="order-list__price-cell price-mb-show">
                                                            {% endif %}
                                                            {% if line.original_line_price != line.final_line_price %}
                                                                <del class="order-list__item-original-price price-del">{{ line.original_line_price | money }}</del>
                                                            {% endif %}
                                                            <p class="order-list__item-price price-bold">
                                                                {% if line.final_line_price > 0 %}
                                                                {{ line.final_line_price | money }}
