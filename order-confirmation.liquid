            font-weight: 700;
            font-style: Bold;
            font-size: 16px;
            leading-trim: NONE;
            line-height: 100%;
            letter-spacing: 0%;
        }

        .price-bold {
            font-family: Arial;
            font-weight: 700;
            font-style: Bold;
            font-size: 14px;
