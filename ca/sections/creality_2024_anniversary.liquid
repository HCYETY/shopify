        }
      });
    })

     //  折叠面板
    $('.el-collapse-item__header').each(function(i,item) {
      $(this).click(function() {
        $(this).next('.el-collapse-item__content').slideToggle();
        var iconNode = $(this).find(".el-collapse-icon");
        iconNode.hasClass('active') ? iconNode.removeClass('active') : iconNode.addClass('active');
      });
    })

     // 购买按钮事件
    $(".buy-now").click(function(e) {
      var productId = $(this).attr("product-id");
      $.ajax({
        type: "POST",
        url: "/cart/clear.js",
        data: {},
        dataType: "json",
        success: function() { 
          $.ajax({
            type: "POST",
            url: "/cart/add.js",
            data: {
              quantity: 1,
              id: productId
            },
            dataType: "json",
            success: function() { 
              window.location.href = "/checkout";
            }
          });
        }
      });
    })
    function CountdownTimer(endDate) {
      this.endDate = new Date(endDate).getTime();
      this.timeoutId = null;
    }

    CountdownTimer.prototype.calculateTimeLeft = function () {
      const now = new Date().getTime();
      const distance = this.endDate - now;
      return distance < 0 ? 0 : distance;
    };

    CountdownTimer.prototype.start = function (callback) {
      const update = () => {
        const distance = this.calculateTimeLeft();

        if (distance <= 0) {
          callback(null);
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        callback({
          days: days,
          hours: hours,
          minutes: minutes,
          seconds: seconds,
          totalMilliseconds: distance
        });

        // 调整下一次更新的间隔时间，以保证准确性
        const nextTick = 1000 - (new Date().getTime() % 1000);
        this.timeoutId = setTimeout(update, nextTick);
      };
      update();
    };

    CountdownTimer.prototype.stop = function () {
      clearTimeout(this.timeoutId);
    };
    function padZero(num) {
      if (num < 10) {
        return '0' + num;
      } else {
        return '' + num;
      }
    }

    // 使用API
    const countdown = new CountdownTimer('{{section.settings.endet_time}}'); // 设置北京时间2023年2月15日00:00
    let day_text = $('.time-wrap .day');
    let hours_text = $('.time-wrap .hour');
    let min_text = $('.time-wrap .minute');
    let seconds_text = $('.time-wrap .second');
    countdown.start((timeLeft) => {
      if (timeLeft) {
        // countdown_text.text(`${timeLeft.days}d:${timeLeft.hours}h:${timeLeft.minutes}m:${timeLeft.seconds}s`)
        day_text.text(padZero(timeLeft.days))
        hours_text.text(padZero(timeLeft.hours))
        min_text.text(padZero(timeLeft.minutes))
        seconds_text.text(padZero(timeLeft.seconds))
        // countdown_text.text(`${timeLeft.days}days:${timeLeft.hours}hours:${timeLeft.minutes}minutes:${timeLeft.seconds}seconds`)
        console.log(`Time left:`);
      } else {
        console.log('Countdown finished!');
        countdown.stop();
      }
    });
  }) ()
  
</script>

