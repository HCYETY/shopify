    <div class="content">
      <div class="common-title">
        Creality Falcon 10th Anniversary Celebration: <br class="pc"> 
        Embrace the Challenge, Unleash Endless Creativity!
      </div>
      <div class="shop-list">
        {% assign products = section.settings.collection1.products %}
        {% for product in products %}
          <div class="shop tw-relative">
            {% unless product.compare_at_price <= product.price %}
              <div class="geezer tw-absolute">
                {% assign str = product.compare_at_price | minus: product.price | money %}
                {% assign size = str | size | minus: 3 %}
                {% assign removed_three = str | slice: 0, size %}
                <img class="lazyload" src="https://cdn.shopifycdn.net/s/files/1/0799/8714/7049/files/6_793048f4-ec00-4c30-832f-72dd1347498a.png?v=1711786954" alt="">
                <div class="discount tw-absolute">
                  <div class="money">{{ removed_three }}</div>
                  <div>Save</div>
                </div>
              </div>
            {% endunless %}
            <div class="img-wrap album-product-surplus-image tw-col-span-2">
              <a class="tw-relative tw-block tw-w-full product-hover-img"  href="{{product.url }}">
                <img class="product-img" srcset="
                    {%- if product.featured_media.width >= 720 -%}
                        {{ product.featured_media | img_url: '720x' }} 720w,
                    {%- endif -%}
                    {%- if product.featured_media.width >= 940 -%}
                        {{ product.featured_media | img_url: '940x' }} 940w,
                    {%- endif -%}
                    {%- if product.featured_media.width >= 1066 -%}
                        {{ product.featured_media | img_url: '1066x' }} 1066w
                    {%- endif -%}"
                    src="{{ product.featured_media | img_url: '533x' }}"
                    sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                    alt="{{ product.featured_media.alt | escape }} {{product.featured_media.width}}"
                    loading="lazy"
                    class="motion-reduce"
                >
              </a>
            </div>
            <div class="product-description">
              <div class="product-name">{{product.title}}</div>
              <div class="left-box">
                <div class="money-box">
                  <span class="now-price linear-gradient-text">{{product.price | money}}</span>
                  <del class="old-price">{{product.compare_at_price | money}}</del>
                </div>
                <div class="product-btn-box">
                  {%- assign product_form_id = 'product-quick-view-form-' | append: product.id -%}
                  {%- form 'product', product, id: product_form_id, class: 'form productView-action', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
                    <div class="productView-group">
                      <div class="productView-groupTop">
                        <div class="productView-action">
                          <input
                            type="hidden"
                            name="id"
                            value="{{ product.variants[0].id }}">
                          <div class="product-form__buttons">
                            <button
                              type="submit"
                              name="add"
                              data-btn-addToCart
                              class="product-form__submit button"
                              id="product-quick-shop-add-to-cart">
                              {{ 'products.product.add_to_cart' | t }}
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  {%- endform -%}
                  <!-- <div product-id="{{product.variants[0].id}}" class="add-cart">Add to Card</div> -->
                  <div product-id="{{product.variants[0].id}}" class="buy-now">Buy Now</div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
