<style>
@charset "UTF-8";
body {
  background-color: #eee;
}
.blog-template-plain {
  padding: 0 23.44vw;
}
.blog-template-plain .divider {
  width: 5.21vw;
  height: 0.1vw;
  background-color: #aaaaaa;
  margin: 2.08vw 0;
}
.blog-template-plain .main-wrap {
  margin-top: 2.6vw;
}
.blog-template-plain .main-wrap .blog-tags span::after {
  content: "|";
  margin: 0 0.52vw;
  font-weight: 800;
}
.blog-template-plain .main-wrap .blog-tags span:last-child::after {
  content: "";
}
.blog-template-plain .main-wrap .blog-shareLink {
  display: flex;
  gap: 2.08vw;
  margin-top: 0.78vw;
}
.blog-template-plain .main-wrap .blog-shareLink div {
  width: 1.46vw;
}
.blog-template-plain .main-wrap .blog-shareLink div img {
  width: 100%;
}
.blog-template-plain .main-wrap .blog-title {
  font-weight: bold;
  font-size: 4.43vw;
}
.blog-template-plain .main-wrap .blog-author {
  margin-top: 1.56vw;
}
.blog-template-plain .main-wrap .blog-list {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 0.83vw;
  padding: 3.13vw;
  gap: 1.3vw;
}
.blog-template-plain .main-wrap .blog-list div {
  flex: 1 1 calc(50% - 1.3vw);
  box-sizing: border-box;
}
.blog-template-plain .main-wrap .blog-list div a {
  text-decoration: underline;
}
.blog-template-plain .main-wrap .blog-list div::before {
  content: "-";
  position: absolute;
  transform: translateX(-1.04vw);
  color: #bbbbbb;
}
.blog-template-plain .main-wrap .blog-content .h2 {
  font-size: 1.67vw;
}
.blog-template-plain .main-wrap .blog-content .h3 {
  font-size: 1.35vw;
}
.blog-template-plain .main-wrap .blog-content .text {
  font-size: 1.04vw;
}
.blog-template-plain .main-wrap .blog-content div {
  margin-top: 1.04vw;
}
.blog-template-plain .main-wrap .blog-content .picture {
  border-radius: 0.63vw;
  overflow: hidden;
}
.blog-template-plain .main-wrap .blog-content .picture img {
  width: 100%;
}
.blog-template-plain .main-wrap .blog-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 1.04vw;
  margin-top: 1.35vw;
  font-weight: 800;
  gap: 1.04vw;
}
.blog-template-plain .main-wrap .blog-footer img {
  width: 3.13vw;
}
@media (max-width: 60rem) {
  .blog-template-plain {
    padding: 0 8.24vw;
  }
  .blog-template-plain .divider {
    width: 14.12vw;
    height: 0.47vw;
    margin: 9.41vw 0;
  }
  .blog-template-plain .main-wrap {
    margin-top: 18.82vw;
  }
  .blog-template-plain .main-wrap .blog-tags {
    text-align: center;
    font-size: 2.82vw;
  }
  .blog-template-plain .main-wrap .blog-tags span::after {
    margin: 0 2.35vw;
  }
  .blog-template-plain .main-wrap .blog-title {
    font-size: 7.53vw;
    text-align: center;
    margin-top: 14.12vw;
  }
  .blog-template-plain .main-wrap .blog-shareLink {
    gap: 9.41vw;
    margin-top: 4.71vw;
  }
  .blog-template-plain .main-wrap .blog-shareLink div {
    width: 6.59vw;
  }
  .blog-template-plain .main-wrap .blog-author {
    text-align: left;
  }
  .blog-template-plain .main-wrap .blog-list {
    flex-direction: column;
    padding: 14.12vw 9.41vw;
    gap: 9.41vw;
    border-radius: 3.76vw;
  }
  .blog-template-plain .main-wrap .blog-list div {
    flex: 1;
  }
  .blog-template-plain .main-wrap .blog-list div::before {
    transform: translateX(-4.71vw);
  }
  .blog-template-plain .main-wrap .blog-content .h2 {
    font-size: 7.53vw;
  }
  .blog-template-plain .main-wrap .blog-content .h3 {
    font-size: 6.12vw;
  }
  .blog-template-plain .main-wrap .blog-content .text {
    font-size: 4.24vw;
  }
  .blog-template-plain .main-wrap .blog-content div {
    margin-top: 5.88vw;
  }
  .blog-template-plain .main-wrap .blog-content .picture {
    border-radius: 2.82vw;
  }
  .blog-template-plain .main-wrap .blog-footer {
    text-align: center;
    font-size: 4.71vw;
    margin-top: 6.12vw;
    gap: 4.71vw;
  }
  .blog-template-plain .main-wrap .blog-footer img {
    width: 14.12vw;
  }
}
</style>
{% liquid 
    assign blog_title = article.title | escape
    assign blog_url = canonical_url | escape
    assign blog_image = article.image | img_url : 'large' | escape
    assign blog_excerpt = article.excerpt | escape
%}
<div id="articleContent" style="display: none">
  {{ article.content }}
</div>
<div class="blog-template-plain ">
  <div class="main-wrap">
    <section class="blog-tags">
        {% if section.settings.tags %}
          {% assign tagsList = section.settings.tags | split: ',' %}
          {% for item in tagsList%}
            <span>{{ item }}</span>
          {% endfor %}
        {% endif %}
    </section>

    <section class="blog-title">
      <span>{{ section.settings.h1 }}</span>
    </section>

    <section class="blog-shareLink">
      <div class="icon">
        <a href="http://pinterest.com/pin/create/button/?url={{ blog_url }}&media={{ blog_image }}&description={{ blog_excerpt }}&width=1024&height=1024" title="Pinterest" target="_blank">
          Pinterest
        </a>
      </div>
      <div class="icon">
        <a href="https://www.facebook.com/sharer/sharer.php?u={{ blog_url }}" target="_blank" target="_blank">
          FaceBook
        </a>
      </div>
      <div class="icon">
        <a href="mailto:?subject={{ blog_title }}&body={{ blog_excerpt }} Read more at {{ blog_url }}" target="_blank">
          邮箱
        </a>
      </div>
    </section>

    <section class="blog-author">
      <span>{{ section.settings.blogAuthor }}</span>
    </section>

    <div class="divider"></div>

    <section class="blog-list">
      {% for block in section.blocks %}
        {% if block.settings.linkText and block.settings.isLink%}
          <div class="blog-link">
            <a href="{{ section.settings.text_link }}" target="_blank">{{ block.settings.linkText }}</a>
          </div>
        {% elsif block.settings.linkText %}
          <div class="blog-text">
            <span>{{ block.settings.linkText }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </section>

    <section class="blog-content">
      {% for block in section.blocks %}
        {% if block.settings.h2 %}
          <div class="h2">{{ block.settings.h2}}</div>
        {% endif %}
        {% if block.settings.h3 %}
          <div class="h3">{{ block.settings.h3}}</div>
        {% endif %}
        {% if block.settings.content %}
          <div class="text">{{ block.settings.content}}</div>
        {% endif %}
        {% if block.settings.picture %}
          <div class="picture">
            {{ block.settings.picture| image_url: width: nil | image_tag  }}
          </div>
        {% endif %}
      {% endfor %}
    </section>

    <section class="blog-footer">
      <span>Want to learn more tips and tricks? Join our Facebook group!</span>
      <div>
        <a href="#"></a>
      </div>
    </section>
  </div>
</div>
{% schema %}
{
  "name": "blog-template-plain",
  "tag": "section",
  "settings": [
      {
        "type": "text",
        "id": "h1",
        "label": "一级标题",
        "default": "一级标题"
      },
      {
         "type": "text",
          "id": "blogAuthor",
          "label": "日期+作者",
      },
      {
        "type": "textarea",
        "id": "tags",
        "label": "分类名",
        "default": "分类"
      },
  ],
  "blocks": [
      {
        "type": "h2",
        "name": "文章",
        "settings": [
          {
            "type": "text",
            "id": "h2",
            "label": "二级标题",
            "default": "二级标题"
          },
          {
            "type": "text",
            "id": "h3",
            "label": "三级标题",
            "default": "三级标题"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "内容",
            "default": "<p>文本内容......</p>"
          },
          {
            "type": "image_picker",
            "id": "picture",
            "label": "图片",
          }
        ]
      },
      {
        "type": "cText",
        "name": "文案",
        "settings": [
          {
            "type": "text",
            "id": "h3",
            "label": "三级标题",
            "default": "三级标题"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "内容",
            "default": "<p>文本内容......</p>"
          },
          {
            "type": "image_picker",
            "id": "picture",
            "label": "图片",
          }
        ]
      },
      {
        "type": "linkUrl",
        "name": "链接",
        "settings": [
          {
            "type": "text",
            "id": "linkText",
            "label": "文本"
          },
          {
            "type": "checkbox",
            "id": "isLink",
            "label": "是否使用文本链接"
          },
          {
            "type": "url",
            "id": "text_link",
            "label": "文本链接",
          }
        ]
      }
  ],
  "presets": [
    {
      "name": "blog-template-plain"
    }
  ]
}
{% endschema %}
