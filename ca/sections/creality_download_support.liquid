</div>
<script type="module">
  var isMbile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
  $(function() {
    if(isMbile) {
      $(".download-support-{{section.id}} .tooltipButton").on("touchstart", function(e){
        $(this).next().css("visibility", "visible");
      });
      $(".download-support-{{section.id}} .tooltipButton").on("touchend", function(e){
        $(this).next().css("visibility", "hidden");
      });
    }
    $(".download-support-{{section.id}} .tooltipButton").hover(function(){
        $(this).next().css("visibility", "visible");
    }, function(){
        $(this).next().css("visibility", "hidden");
    });
    $('.download-support-{{section.id}} .support-item-title').click(function(){
      $(this).find('.drop-icon').toggleClass('drop-icon-close')
      $(this).parent().children(".drop-down-text").slideToggle()
    })
  })
</script>
