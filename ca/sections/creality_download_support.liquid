    height: 20px;
  }
  .download-support-{{section.id}} .icon-info {
    width: 16px;
    height: 16px;
  }
  .download-support-{{section.id}} .drop-icon-close {
    transform: rotate(180deg);
  } 
  .download-support-{{section.id}} .download-support-heading {
    font-family: "Montserrat-Bold";
    font-weight: bold;
    font-size:32px;
    line-height:39.01px; 
    color: rgba(0, 0, 0, 1);
  }
  .download-support-{{section.id}} .item-title-time .item-title {
    font-family: "Montserrat-Semibold";
    font-weight: 600;
    font-size: 18px;
    line-height: 21.94px;
    color: rgba(0, 0, 0, 1);
  }
  .download-support-{{section.id}} .item-title-time .item-time {
    font-family: "Montserrat-Regular";
    font-weight: 400;
    font-size: 14px;
    line-height:17.07px;
    color: rgba(0, 0, 0, 1);
    padding-bottom: 8px;
  }
  .download-support-{{section.id}} .download-btn {
    font-family: "Montserrat-Semibold";
    font-weight:600;
    font-size:14px;
    line-height:17.07px;
    text-decoration: underline;
    color: #546599;
  }
  .download-support-{{section.id}} .download-btn:hover {
    color: #0059f5;
  }
  .download-support-{{section.id}} .drop-btn-text {
    font-family: "Montserrat-Regular";
    font-weight: 400;
    font-size: 14px;
    line-height:17.07px;
    color: rgba(0, 0, 0, 1);
  }
  .download-support-{{section.id}} .drop-down-text {
    font-family: "Montserrat-Regular";
    font-weight: 400;
    font-size: 14px;
    line-height:24px;
    color: rgba(0, 0, 0, 1);

  }
  .download-support-{{section.id}} .subheading {
    padding: 8px 10px;
    font-size: 15px;
  }
  .download-support-{{section.id}} .subtitle {
    font-size: 20px;
    font-weight: 600;
    padding-left: 10px;
  }
  .download-support-{{section.id}} .tooltip {
    position: relative;
    display: flex;
    align-items: center;
  }

  .download-support-{{section.id}} .tooltipText {
    visibility: hidden;
    width: 200px;
    background-color: #555;
    color: #fff;
    text-align: center;
    padding: 5px 0;
    border-radius: 6px;
    position: absolute;
    z-index: 1;
    bottom: 125%; 
    left: 0; 
    opacity: 0;
    transition: opacity 0.3s;
  }

  .download-support-{{section.id}} .tooltip:hover .tooltipText {
    visibility: visible;
    opacity: 1;
  }
  @media (max-width: 960px) {
    .download-support-{{section.id}}  {
      padding-top:{{mobile_padding_top}}px;
      padding-bottom:{{mobile_padding_bottom}}px;
      padding-left: 25px;
      padding-right: 25px;
