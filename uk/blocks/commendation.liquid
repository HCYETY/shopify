{% stylesheet %}
  .b-commendation-card {
  }
  .b-commendation-card .icon-wrapper {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }
  .b-commendation-card .icon-wrapper .custom-icon {
    object-fit: contain;
    width: 100%;
    height: 100%;
  }

  .b-commendation-card .commendation-wrapper {
    display: flex;
    gap: 12px;
    width: 400px;
    border-radius: 10px;
    margin-top: 4px;
    padding: 6px 14px;
    font-size: 12px;
  }
  .b-commendation-card .author-name {
    flex: 0 0 68px;
    font-weight: 600;
  }
  .b-commendation-card .commendation-text {
    flex: 0 1 auto;
    min-width: 0;
    width: 312px;
    overflow: hidden;
    word-break: break-all;
    text-align: left;
  }

  @media (min-width: 1920px) {
    .b-commendation-card {
  }
  .b-commendation-card .icon-wrapper {
    width: 2.1875vw;
    height: 2.1875vw;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }
  .b-commendation-card .icon-wrapper .custom-icon {
    object-fit: contain;
    width: 100%;
    height: 100%;
  }

  .b-commendation-card .commendation-wrapper {
    display: flex;
    gap: 0.9375vw;
    width: 31.25vw;
    border-radius: 0.78125vw;
    margin-top: 0.3125vw;
    padding: 0.46875vw 1.09375vw;
    font-size: 0.9375vw;
  }
  .b-commendation-card .author-name {
    flex: 0 0 5.3125vw;
    font-weight: 600;
  }
  .b-commendation-card .commendation-text {
    flex: 0 1 auto;
    min-width: 0;
    width: 24.375vw;
    overflow: hidden;
    word-break: break-all;
    text-align: left;
  }
  }
{% endstylesheet %}

<div class="b-commendation-card">
  <div class="icon-wrapper" style="background-color: {{ block.settings.card_background_color }};">
    {% if block.settings.custom_icon %}
      <img
        src="{{ block.settings.custom_icon | img_url: 'master' }}"
        alt="icon"
        class="custom-icon"
        width="100%"
        height="100%"
      >
    {% endif %}
  </div>
  <div class="commendation-wrapper" style="background-color: {{ block.settings.card_background_color }};">
    <p class="author-name">{{ block.settings.author_name }}</p>
    <p class="commendation-text">
      {{ block.settings.commendation_text }}
    </p>
  </div>
</div>

{% schema %}
{
  "name": "用户感言块",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "设置"
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "背景色",
      "default": "#FFE6B5"
    },
    {
      "type": "image_picker",
      "id": "custom_icon",
      "label": "自定义图标"
    },
    {
      "type": "text",
      "id": "author_name",
      "label": "用户名",
      "default": "Emily R."
    },

    {
      "type": "textarea",
      "id": "commendation_text",
      "label": "感言内容",
      "default": "\"My Falcon 2 Pro has completely transformed my small business! The precision and power are unbelievable – every project turns out perfect. Happy 11th Anniversary, Creality Falcon – here's to many more years of innovation!\""
    }
  ],
  "presets": [
    {
      "name": "用户感言块"
    }
  ]
}
{% endschema %}
