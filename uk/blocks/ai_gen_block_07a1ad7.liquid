{% doc %}
  @prompt
    Create a customizable section with a main heading/title and three square images displayed in a row. Each square image should be clickable with customizable links. The section should have settings to adjust spacing, layout parameters, and styling options. Include options to customize the heading text, upload different images for each square, and set individual links for each image. Make it responsive for mobile devices and include customization options for colors, fonts, and hover effects.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-image-grid-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-image-grid-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_font_size }}px;
    font-weight: {{ block.settings.heading_font_weight }};
    text-transform: {{ block.settings.heading_text_transform }};
  }

  .ai-image-grid-items-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.image_spacing }}px;
  }

  .ai-image-grid-item-{{ ai_gen_id }} {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    transition: transform {{ block.settings.hover_transition_duration }}s ease;
  }

  .ai-image-grid-item-{{ ai_gen_id }}:hover {
    transform: {{ block.settings.hover_transform }};
  }

  .ai-image-grid-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
    text-decoration: none;
  }

  .ai-image-grid-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all {{ block.settings.hover_transition_duration }}s ease;
  }

  .ai-image-grid-item-{{ ai_gen_id }}:hover .ai-image-grid-image-{{ ai_gen_id }} {
    transform: scale({{ block.settings.hover_image_scale }});
    filter: brightness({{ block.settings.hover_brightness }}%);
  }

  .ai-image-grid-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-image-grid-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-image-grid-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-grid-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: {{ block.settings.overlay_color }};
    opacity: 0;
    transition: opacity {{ block.settings.hover_transition_duration }}s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-grid-item-{{ ai_gen_id }}:hover .ai-image-grid-overlay-{{ ai_gen_id }} {
    opacity: {{ block.settings.overlay_opacity }};
  }

  .ai-image-grid-overlay-text-{{ ai_gen_id }} {
    color: {{ block.settings.overlay_text_color }};
    font-size: {{ block.settings.overlay_font_size }}px;
    font-weight: {{ block.settings.overlay_font_weight }};
    text-align: center;
    padding: 10px;
  }

  @media screen and (max-width: 749px) {
    .ai-image-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.image_spacing_mobile }}px;
    }

    .ai-image-grid-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_font_size_mobile }}px;
      margin-bottom: {{ block.settings.heading_margin_bottom_mobile }}px;
    }

    .ai-image-grid-container-{{ ai_gen_id }} {
      padding: 0 15px;
    }
  }
{% endstyle %}

<div class="ai-image-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-grid-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-image-grid-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-image-grid-items-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign link_key = 'link_' | append: i
          assign overlay_text_key = 'overlay_text_' | append: i
          
          assign image = block.settings[image_key]
          assign link = block.settings[link_key]
          assign overlay_text = block.settings[overlay_text_key]
        %}

        <div class="ai-image-grid-item-{{ ai_gen_id }}">
          {% if link != blank %}
            <a href="{{ link }}" class="ai-image-grid-link-{{ ai_gen_id }}">
          {% else %}
            <div class="ai-image-grid-link-{{ ai_gen_id }}">
          {% endif %}

          {% if image %}
            <img
              src="{{ image | image_url: width: 600 }}"
              alt="{{ image.alt | escape }}"
              class="ai-image-grid-image-{{ ai_gen_id }}"
              loading="lazy"
              width="600"
              height="600"
            >
          {% else %}
            <div class="ai-image-grid-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-image-grid-empty-state-{{ ai_gen_id }}">
                Add image {{ i }}
              </div>
            </div>
          {% endif %}

          {% if block.settings.show_overlay and overlay_text != blank %}
            <div class="ai-image-grid-overlay-{{ ai_gen_id }}">
              <div class="ai-image-grid-overlay-text-{{ ai_gen_id }}">{{ overlay_text }}</div>
            </div>
          {% endif %}

          {% if link != blank %}
            </a>
          {% else %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

