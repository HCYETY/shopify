<tabbed-product-showcase-{{ ai_gen_id }}
  class="ai-tabbed-product-showcase-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.header_title != blank or block.settings.header_subtitle != blank %}
    <div class="ai-tabbed-product-showcase__header-{{ ai_gen_id }}">
      {% if block.settings.header_title != blank %}
        <h2 class="ai-tabbed-product-showcase__title-{{ ai_gen_id }}">{{ block.settings.header_title }}</h2>
      {% endif %}
      {% if block.settings.header_subtitle != blank %}
        <p class="ai-tabbed-product-showcase__subtitle-{{ ai_gen_id }}">{{ block.settings.header_subtitle }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-tabbed-product-showcase__tabs-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% assign tab_label_key = 'tab_' | append: i | append: '_label' %}
      {% assign tab_label = block.settings[tab_label_key] %}
      {% if tab_label != blank %}
        <button
          class="ai-tabbed-product-showcase__tab-{{ ai_gen_id }}{% if forloop.first %} active{% endif %}"
          data-tab="{{ i }}"
        >
          {{ tab_label }}
        </button>
      {% endif %}
    {% endfor %}
  </div>

  <div class="ai-tabbed-product-showcase__content-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% assign tab_label_key = 'tab_' | append: i | append: '_label' %}
      {% assign main_product_key = 'tab_' | append: i | append: '_main_product' %}
      {% assign grid_product_1_key = 'tab_' | append: i | append: '_grid_product_1' %}
      {% assign grid_product_2_key = 'tab_' | append: i | append: '_grid_product_2' %}
      {% assign grid_product_3_key = 'tab_' | append: i | append: '_grid_product_3' %}
      {% assign grid_product_4_key = 'tab_' | append: i | append: '_grid_product_4' %}

      {% assign tab_label = block.settings[tab_label_key] %}
      {% assign main_product = block.settings[main_product_key] %}
      {% assign grid_product_1 = block.settings[grid_product_1_key] %}
      {% assign grid_product_2 = block.settings[grid_product_2_key] %}
      {% assign grid_product_3 = block.settings[grid_product_3_key] %}
      {% assign grid_product_4 = block.settings[grid_product_4_key] %}

      {% if tab_label != blank %}
        <div
          class="ai-tabbed-product-showcase__tab-panel-{{ ai_gen_id }}{% if forloop.first %} active{% endif %}"
          data-panel="{{ i }}"
        >
          <div class="ai-tabbed-product-showcase__split-layout-{{ ai_gen_id }}">
            <div class="ai-tabbed-product-showcase__left-section-{{ ai_gen_id }}">
              {% if main_product != blank %}
                <div class="ai-tabbed-product-showcase__main-product-{{ ai_gen_id }}">
                  <div class="ai-tabbed-product-showcase__main-product-image-{{ ai_gen_id }}">
                    {% if main_product.featured_image %}
                      <img
                        src="{{ main_product.featured_image | image_url: width: 600 }}"
                        alt="{{ main_product.featured_image.alt | escape }}"
                        loading="lazy"
                        width="{{ main_product.featured_image.width }}"
                        height="{{ main_product.featured_image.height }}"
                      >
                    {% else %}
                      <div class="ai-tabbed-product-showcase__placeholder-{{ ai_gen_id }}">
                        {{ 'product-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                  <h3 class="ai-tabbed-product-showcase__main-product-title-{{ ai_gen_id }}">{{ main_product.title }}</h3>
                  <div class="ai-tabbed-product-showcase__main-product-price-{{ ai_gen_id }}">
                    <span class="ai-tabbed-product-showcase__price-{{ ai_gen_id }}">{{ main_product.price | money }}</span>
                    {% if main_product.compare_at_price > main_product.price %}
                      <span class="ai-tabbed-product-showcase__compare-price-{{ ai_gen_id }}">{{ main_product.compare_at_price | money }}</span>
                    {% endif %}
                  </div>
                  <form action="/cart/add" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="{{ main_product.selected_or_first_available_variant.id }}">
                    <button type="submit" class="ai-tabbed-product-showcase__add-to-cart-{{ ai_gen_id }}">
                      {{ block.settings.main_button_text }}
                    </button>
                  </form>
                </div>
              {% else %}
                <div class="ai-tabbed-product-showcase__placeholder-{{ ai_gen_id }}">
                  Select a main product for this tab
                </div>
              {% endif %}
            </div>

            <div class="ai-tabbed-product-showcase__right-section-{{ ai_gen_id }}">
              <div class="ai-tabbed-product-showcase__grid-products-{{ ai_gen_id }}">
                {% assign grid_products = grid_product_1 | append: ',' | append: grid_product_2 | append: ',' | append: grid_product_3 | append: ',' | append: grid_product_4 | split: ',' %}
                {% for j in (1..4) %}
                  {% assign grid_product_key = 'tab_' | append: i | append: '_grid_product_' | append: j %}
                  {% assign grid_product = block.settings[grid_product_key] %}
                  <div class="ai-tabbed-product-showcase__grid-product-{{ ai_gen_id }}">
                    {% if grid_product != blank %}
                      <div class="ai-tabbed-product-showcase__grid-product-image-{{ ai_gen_id }}">
                        {% if grid_product.featured_image %}
                          <img
                            src="{{ grid_product.featured_image | image_url: width: 300 }}"
                            alt="{{ grid_product.featured_image.alt | escape }}"
                            loading="lazy"
                            width="{{ grid_product.featured_image.width }}"
                            height="{{ grid_product.featured_image.height }}"
                          >
                        {% else %}
                          <div class="ai-tabbed-product-showcase__placeholder-{{ ai_gen_id }}">
                            {{ 'product-1' | placeholder_svg_tag }}
                          </div>
                        {% endif %}
                      </div>
                      <h4 class="ai-tabbed-product-showcase__grid-product-title-{{ ai_gen_id }}">{{ grid_product.title }}</h4>
                      <div class="ai-tabbed-product-showcase__grid-product-price-{{ ai_gen_id }}">
                        <span class="ai-tabbed-product-showcase__price-{{ ai_gen_id }}">{{ grid_product.price | money }}</span>
                        {% if grid_product.compare_at_price > grid_product.price %}
                          <span class="ai-tabbed-product-showcase__compare-price-{{ ai_gen_id }}">{{ grid_product.compare_at_price | money }}</span>
                        {% endif %}
                      </div>
                      <form action="/cart/add" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="{{ grid_product.selected_or_first_available_variant.id }}">
                        <button type="submit" class="ai-tabbed-product-showcase__grid-add-to-cart-{{ ai_gen_id }}">
                          {{ block.settings.grid_button_text }}
                        </button>
                      </form>
                    {% else %}
                      <div class="ai-tabbed-product-showcase__placeholder-{{ ai_gen_id }}">
                        Select product {{ j }}
                      </div>
                    {% endif %}
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</tabbed-product-showcase-{{ ai_gen_id }}>

<script>
  (function() {
    class TabbedProductShowcase{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-tabbed-product-showcase__tab-{{ ai_gen_id }}');
        this.panels = this.querySelectorAll('.ai-tabbed-product-showcase__tab-panel-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', (e) => {
            const tabId = e.target.dataset.tab;
            this.switchTab(tabId);
          });
        });
      }

      switchTab(tabId) {
        this.tabs.forEach((tab) => {
          tab.classList.remove('active');
          if (tab.dataset.tab === tabId) {
            tab.classList.add('active');
          }
        });

        this.panels.forEach((panel) => {
          panel.classList.remove('active');
          if (panel.dataset.panel === tabId) {
            panel.classList.add('active');
          }
        });
      }
    }

    customElements.define('tabbed-product-showcase-{{ ai_gen_id }}', TabbedProductShowcase{{ ai_gen_id }});
  })();
</script>

