      "id": "product_1",
      "label": "Product 1"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Product 2"
    },
    {
      "type": "product",
      "id": "product_3",
      "label": "Product 3"
    },
    {
      "type": "product",
      "id": "product_4",
      "label": "Product 4"
    },
    {
      "type": "range",
      "id": "product_image_border_radius",
      "label": "Product image border radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
