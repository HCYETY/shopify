{% doc %}
  @prompt
    Create a two-column section where the left side displays a large featured image with a "Shop Now" button below it, and the right side shows a grid of four smaller product images, each with its own add to cart button underneath. Include section width settings so the merchant can adjust the overall section width

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-grid-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.section_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px;
  }

  .ai-featured-grid__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
    align-items: start;
  }

  .ai-featured-grid__left-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-featured-grid__featured-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 4/5;
    overflow: hidden;border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-featured-grid__featured-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-featured-grid__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-featured-grid__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-grid__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
  }

  .ai-featured-grid__shop-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 15px 30px;
    background-color: {{ block.settings.shop_button_color }};
    color: {{ block.settings.shop_button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-featured-grid__shop-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.shop_button_hover_color }};
  }

  .ai-featured-grid__right-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.product_gap }}px;
  }

  .ai-featured-grid__product-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-featured-grid__product-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: {{ block.settings.product_image_border_radius }}px;
  }

  .ai-featured-grid__product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-featured-grid__product-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-featured-grid__product-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-featured-grid__product-empty-{{ ai_gen_id }} {
    position: absolute;
    bottom: 8px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
  }

  .ai-featured-grid__add-to-cart-{{ ai_gen_id }} {
    padding: 10px 16px;
    background-color: {{ block.settings.cart_button_color }};
    color: {{ block.settings.cart_button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-align: center;
  }

  .ai-featured-grid__add-to-cart-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.cart_button_hover_color }};
  }

  .ai-featured-grid__add-to-cart-{{ ai_gen_id }}:disabled {
    background-color: #ccc;
    cursor: not-allowed;
  }

  .ai-featured-grid__product-title-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 500;
    margin: 0;
    text-align: center;
  }

  .ai-featured-grid__product-price-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    text-align: center;
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-featured-grid__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-featured-grid__right-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.mobile_columns }}, 1fr);
    }
  }
{% endstyle %}

<div class="ai-featured-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-grid__container-{{ ai_gen_id }}">
    <div class="ai-featured-grid__left-{{ ai_gen_id }}">
      <div class="ai-featured-grid__featured-image-{{ ai_gen_id }}">
        {% if block.settings.featured_image %}
          <img
            src="{{ block.settings.featured_image | image_url: width: 800 }}"
            alt="{{ block.settings.featured_image.alt | escape }}"
            loading="lazy"width="{{ block.settings.featured_image.width }}"
            height="{{ block.settings.featured_image.height }}"
          >
        {% else %}
          <div class="ai-featured-grid__image-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-featured-grid__empty-state-{{ ai_gen_id }}">
              Add a featured image
            </div>
          </div>
        {% endif %}
      </div>

      {% if block.settings.shop_button_text != blank %}
        <a
          href="{{ block.settings.shop_button_link | default: '#' }}"
          class="ai-featured-grid__shop-button-{{ ai_gen_id }}"
        >
          {{ block.settings.shop_button_text }}
        </a>
      {% endif %}
    </div>

    <div class="ai-featured-grid__right-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign product = block.settings[product_key]
        %}

        <div class="ai-featured-grid__product-{{ ai_gen_id }}">
          <div class="ai-featured-grid__product-image-{{ ai_gen_id }}">
            {% if product and product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 400 }}"
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
                width="{{ product.featured_image.width }}"
                height="{{ product.featured_image.height }}"
              >
            {% else %}
              <div class="ai-featured-grid__product-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
                <div class="ai-featured-grid__product-empty-{{ ai_gen_id }}">
                  Add product {{ i }}
                </div>
              </div>
            {% endif %}
          </div>

          {% if product %}
            <h3 class="ai-featured-grid__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
            <p class="ai-featured-grid__product-price-{{ ai_gen_id }}">{{ product.price | money }}</p>

            {% form 'product', product %}
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button
                type="submit"
                class="ai-featured-grid__add-to-cart-{{ ai_gen_id }}"
                {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}
              >
                {% if product.selected_or_first_available_variant.available %}
                  {{ block.settings.add_to_cart_text }}
                {% else %}
                  Sold out
                {% endif %}
              </button>
            {% endform %}
          {% else %}
            <button class="ai-featured-grid__add-to-cart-{{ ai_gen_id }}" disabled>
              {{ block.settings.add_to_cart_text }}
            </button>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

