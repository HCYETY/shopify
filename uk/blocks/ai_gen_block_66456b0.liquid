{% doc %}
  @prompt
    Create a customizable section with a main section title to display top 3 featured items or products in a row on desktop with 1200px width. Each item should include a product image, title, description, price, and call-to-action button styled as cards. The section should have settings to adjust the section width, spacing, and layout parameters. Include a customizable section title/heading at the top. On mobile devices, the three items should display as a horizontal slider/carousel with swipe functionality using card-style design. Make it responsive and include customization options for colors, fonts, and styling.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-products-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.section_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-featured-products__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    margin-bottom: {{ block.settings.title_margin_bottom }}px;
  }

  .ai-featured-products__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-featured-products__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.card_spacing }}px;
  }

  .ai-featured-products__card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    text-align: {{ block.settings.card_text_alignment }};
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-featured-products__card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.card_hover_lift }}px);
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 8 }}px {{ block.settings.card_shadow_color }};
  }

  .ai-featured-products__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    margin-bottom: {{ block.settings.image_margin_bottom }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-featured-products__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-featured-products__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-featured-products__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-products__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_font_size }}px;
    font-weight: {{ block.settings.product_title_font_weight }};
    color: {{ block.settings.product_title_color }};
    margin: 0 0 {{ block.settings.product_title_margin_bottom }}px;
    line-height: 1.3;
  }

  .ai-featured-products__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 {{ block.settings.description_margin_bottom }}px;
    line-height: 1.4;
  }

  .ai-featured-products__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    font-weight: {{ block.settings.price_font_weight }};
    color: {{ block.settings.price_color }};
    margin: 0 0 {{ block.settings.price_margin_bottom }}px;
  }

  .ai-featured-products__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: background-color 0.3s ease, color 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-featured-products__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-featured-products__slider-{{ ai_gen_id }} {
    display: none;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .ai-featured-products__slider-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-featured-products__slider-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_spacing }}px;
    padding: 0 {{ block.settings.section_padding_horizontal }}px;
  }

  .ai-featured-products__slider-track-{{ ai_gen_id }} .ai-featured-products__card-{{ ai_gen_id }} {
    flex: 0 0 280px;
    scroll-snap-align: start;
  }

  @media screen and (max-width: 768px) {
    .ai-featured-products__grid-{{ ai_gen_id }} {
      display: none;
    }

    .ai-featured-products__slider-{{ ai_gen_id }} {
      display: block;
      margin: 0 -{{ block.settings.section_padding_horizontal }}px;
    }

    .ai-featured-products__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.8 }}px;
    }

    .ai-featured-products__product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_font_size | times: 0.9 }}px;
    }

    .ai-featured-products__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<featured-products-{{ ai_gen_id }} class="ai-featured-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
