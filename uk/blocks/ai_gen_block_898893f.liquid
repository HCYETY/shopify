{% doc %}
  @prompt
    Create a clearance products section with eye-catching sale badges and discounted pricing display. Layout should show 2 rows with 2 columns (4 products total) on mobile, and 2 rows with 4 columns (8 products total) on desktop. Include left/right slider arrows for navigation and a "View All" button. Add horizontal shaking animation for promotional messaging to highlight special offers and limited-time deals. Include product grid with sale badges and compare-at pricing.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-clearance-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-clearance-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-clearance-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-clearance-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    font-weight: 700;
  }

  .ai-clearance-promo-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.promo_bg_color }};
    color: {{ block.settings.promo_text_color }};
    padding: 12px 24px;
    border-radius: {{ block.settings.promo_border_radius }}px;
    font-size: {{ block.settings.promo_text_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 24px;
  }

  .ai-clearance-promo-{{ ai_gen_id }}.shake {
    animation: ai-clearance-shake-{{ ai_gen_id }} 0.5s ease-in-out infinite alternate;
  }

  @keyframes ai-clearance-shake-{{ ai_gen_id }} {
    0% { transform: translateX(0); }
    25% { transform: translateX(-3px); }
    50% { transform: translateX(3px); }
    75% { transform: translateX(-2px); }
    100% { transform: translateX(2px); }
  }

  .ai-clearance-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-clearance-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    transition: transform 0.3s ease;
  }

  .ai-clearance-product-card-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.card_bg_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-clearance-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .ai-clearance-product-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .ai-clearance-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-clearance-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-clearance-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-clearance-sale-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background-color: {{ block.settings.badge_bg_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: {{ block.settings.badge_text_size }}px;
    font-weight: 700;
    text-transform: uppercase;
    z-index: 2;
  }

  .ai-clearance-product-info-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-clearance-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 12px;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-clearance-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-clearance-product-title-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  .ai-clearance-product-pricing-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
  }

  .ai-clearance-sale-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.sale_price_color }};
    font-weight: 700;
  }

  .ai-clearance-compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.compare_price_size }}px;
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
  }

  .ai-clearance-savings-{{ ai_gen_id }} {
    background-color: {{ block.settings.savings_bg_color }};
    color: {{ block.settings.savings_text_color }};
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
  }

  .ai-clearance-nav-button-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_icon_color }};
    border: none;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 3;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    transition: background-color 0.3s ease;
  }

  .ai-clearance-nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-clearance-nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-clearance-nav-prev-{{ ai_gen_id }} {
    left: -24px;
  }

  .ai-clearance-nav-next-{{ ai_gen_id }} {
    right: -24px;
  }

  .ai-clearance-view-all-{{ ai_gen_id }} {
    text-align: center;
    margin-top: 40px;
  }

  .ai-clearance-view-all-button-{{ ai_gen_id }} {
    background-color: {{ block.settings.view_all_bg_color }};
    color: {{ block.settings.view_all_text_color }};
    padding: 16px 32px;
    border: none;
    border-radius: {{ block.settings.view_all_border_radius }}px;
    font-size: {{ block.settings.view_all_text_size }}px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-clearance-view-all-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.view_all_hover_color }};
  }

  @media screen and (min-width: 768px) {
    .ai-clearance-products-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(4, 1fr);
    }

    .ai-clearance-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 1.2 }}px;
    }
  }

  @media screen and (max-width: 767px) {
    .ai-clearance-nav-prev-{{ ai_gen_id }} {
      left: 10px;
    }

    .ai-clearance-nav-next-{{ ai_gen_id }} {
      right: 10px;
    }
  }
{% endstyle %}

<clearance-products-{{ ai_gen_id }} class="ai-clearance-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-clearance-container-{{ ai_gen_id }}">
    <div class="ai-clearance-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-clearance-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.promo_text != blank %}
        <div class="ai-clearance-promo-{{ ai_gen_id }} {% if block.settings.enable_shake %}shake{% endif %}">
          {{ block.settings.promo_text }}
        </div>
      {% endif %}
    </div>

    <div class="ai-clearance-slider-wrapper-{{ ai_gen_id }}">
      <div class="ai-clearance-products-grid-{{ ai_gen_id }}" data-current-page="0">
        {% if block.settings.collection != blank %}
          {% assign sale_products = block.settings.collection.products | where: 'compare_at_price' %}
          {% for product in sale_products limit: 16 %}
            <div class="ai-clearance-product-card-{{ ai_gen_id }}">
              <div class="ai-clearance-product-image-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% else %}
                  <div class="ai-clearance-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if product.compare_at_price > product.price %}
                  {% assign savings_amount = product.compare_at_price | minus: product.price %}
                  {% assign savings_percent = savings_amount | times: 100 | divided_by: product.compare_at_price %}
                  <div class="ai-clearance-sale-badge-{{ ai_gen_id }}">
                    {% if block.settings.badge_type == 'percent' %}
                      {{ savings_percent }}% OFF
                    {% else %}SALE
                    {% endif %}
                  </div>
                {% endif %}
              </div>

              <div class="ai-clearance-product-info-{{ ai_gen_id }}">
                <h3 class="ai-clearance-product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>

                <div class="ai-clearance-product-pricing-{{ ai_gen_id }}">
                  <span class="ai-clearance-sale-price-{{ ai_gen_id }}">{{ product.price | money }}</span>
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-clearance-compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                    {% if block.settings.show_savings %}
                      {% assign savings_amount = product.compare_at_price | minus: product.price %}
                      <span class="ai-clearance-savings-{{ ai_gen_id }}">Save {{ savings_amount | money }}</span>
                    {% endif %}
                  {% endif %}
                </div>
              </div>
            </div>
          {% else %}
            {% for i in (1..8) %}
              <div class="ai-clearance-product-card-{{ ai_gen_id }}">
                <div class="ai-clearance-product-image-{{ ai_gen_id }}"><div class="ai-clearance-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                  <div class="ai-clearance-sale-badge-{{ ai_gen_id }}">SALE</div>
                </div>
                <div class="ai-clearance-product-info-{{ ai_gen_id }}">
                  <h3 class="ai-clearance-product-title-{{ ai_gen_id }}">
                    <a href="#">Sample Product {{ i }}</a>
                  </h3>
                  <div class="ai-clearance-product-pricing-{{ ai_gen_id }}">
                    <span class="ai-clearance-sale-price-{{ ai_gen_id }}">$29.99</span>
                    <span class="ai-clearance-compare-price-{{ ai_gen_id }}">$49.99</span>
                    {% if block.settings.show_savings %}
                      <span class="ai-clearance-savings-{{ ai_gen_id }}">Save $20.00</span>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endfor %}
          {% endfor %}
        {% else %}
          {% for i in (1..8) %}
            <div class="ai-clearance-product-card-{{ ai_gen_id }}">
              <div class="ai-clearance-product-image-{{ ai_gen_id }}">
                <div class="ai-clearance-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
                <div class="ai-clearance-sale-badge-{{ ai_gen_id }}">SALE</div>
              </div>
              <div class="ai-clearance-product-info-{{ ai_gen_id }}">
                <h3 class="ai-clearance-product-title-{{ ai_gen_id }}">
                  <a href="#">Sample Product {{ i }}</a>
                </h3>
                <div class="ai-clearance-product-pricing-{{ ai_gen_id }}">
                  <span class="ai-clearance-sale-price-{{ ai_gen_id }}">$29.99</span>
                  <span class="ai-clearance-compare-price-{{ ai_gen_id }}">$49.99</span>
                  {% if block.settings.show_savings %}
                    <span class="ai-clearance-savings-{{ ai_gen_id }}">Save $20.00</span>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>

      <button class="ai-clearance-nav-button-{{ ai_gen_id }} ai-clearance-nav-prev-{{ ai_gen_id }}" aria-label="Previous products">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <button class="ai-clearance-nav-button-{{ ai_gen_id }} ai-clearance-nav-next-{{ ai_gen_id }}" aria-label="Next products">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    </div>

    {% if block.settings.view_all_text != blank and block.settings.view_all_link != blank %}
      <div class="ai-clearance-view-all-{{ ai_gen_id }}">
        <a href="{{ block.settings.view_all_link }}" class="ai-clearance-view-all-button-{{ ai_gen_id }}">
          {{ block.settings.view_all_text }}
        </a>
      </div>
    {% endif %}
  </div>
</clearance-products-{{ ai_gen_id }}>

<script>
  (function() {
    class ClearanceProducts{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentPage = 0;
        this.itemsPerPage = window.innerWidth >= 768 ? 8 : 4;
        this.totalItems = 0;
        this.maxPages = 0;
      }

      connectedCallback() {
        this.grid = this.querySelector('.ai-clearance-products-grid-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-clearance-nav-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-clearance-nav-next-{{ ai_gen_id }}');
        this.products = this.querySelectorAll('.ai-clearance-product-card-{{ ai_gen_id }}');
        
        this.totalItems = this.products.length;
        this.updateItemsPerPage();
        this.setupEventListeners();
        this.updateNavigation();
        this.showCurrentPage();
      }

      updateItemsPerPage() {
        this.itemsPerPage = window.innerWidth >= 768 ? 8 : 4;
        this.maxPages = Math.ceil(this.totalItems / this.itemsPerPage);
        if (this.currentPage >= this.maxPages) {
          this.currentPage = Math.max(0, this.maxPages - 1);
        }
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.previousPage());
        this.nextButton.addEventListener('click', () => this.nextPage());
        
        window.addEventListener('resize', () => {
          this.updateItemsPerPage();
          this.updateNavigation();
          this.showCurrentPage();
        });
      }

      previousPage() {
        if (this.currentPage > 0) {
          this.currentPage--;
          this.showCurrentPage();
          this.updateNavigation();
        }
      }

      nextPage() {
        if (this.currentPage < this.maxPages - 1) {
          this.currentPage++;
          this.showCurrentPage();
          this.updateNavigation();
        }
      }

      showCurrentPage() {
        this.products.forEach((product, index) => {
          const startIndex = this.currentPage * this.itemsPerPage;
          const endIndex = startIndex + this.itemsPerPage;
          
          if (index >= startIndex && index < endIndex) {
            product.style.display = 'block';
          } else {
            product.style.display = 'none';
          }
        });
      }

      updateNavigation() {
        this.prevButton.disabled = this.currentPage === 0;
        this.nextButton.disabled = this.currentPage >= this.maxPages - 1;
      }
    }

    customElements.define('clearance-products-{{ ai_gen_id }}', ClearanceProducts{{ ai_gen_id }});
  })();
</script>

