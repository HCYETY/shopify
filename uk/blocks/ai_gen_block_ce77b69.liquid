    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity {{ block.settings.content_transition_duration }}s ease, visibility {{ block.settings.content_transition_duration }}s ease;
  }

  .ai-tabbed-showcase-tab-panel-{{ ai_gen_id }}.active {
    opacity: 1;
