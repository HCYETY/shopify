{% doc %}
  @prompt
    Create a customizable section that displays three products in a row. Each product should include a header/title, product title, custom description field (editable text), price, compare-at price (crossed out), and an add to cart button. The section should have settings to adjust the section width, spacing, and other layout parameters. Make it responsive for mobile devices and include customization options for colors, fonts, and button styles., The mobile version shows the slider

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-trio-{{ ai_gen_id }} {
    max-width: {{ block.settings.section_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-trio__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.product_spacing }}px;
  }

  .ai-product-trio__item-{{ ai_gen_id }} {
    background-color: {{ block.settings.product_bg_color }};
    border-radius: {{ block.settings.product_border_radius }}px;
    padding: {{ block.settings.product_padding }}px;
    text-align: center;
    border: 1px solid {{ block.settings.product_border_color }};
  }

  .ai-product-trio__header-{{ ai_gen_id }} {
    font-size: {{ block.settings.header_font_size }}px;
    font-weight: {{ block.settings.header_font_weight }};
    color: {{ block.settings.header_color }};
    margin:0 0 {{ block.settings.header_margin_bottom }}px 0;
    text-transform: {{ block.settings.header_text_transform }};
  }

  .ai-product-trio__image-wrapper-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.image_margin_bottom }}px;position: relative;
  }

  .ai-product-trio__image-{{ ai_gen_id }} {
    width:100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-product-trio__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-trio__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-trio__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_font_size }}px;
    font-weight: {{ block.settings.product_title_font_weight }};
    color: {{ block.settings.product_title_color }};
    margin: 0 0 {{ block.settings.product_title_margin_bottom }}px 0;
    line-height: 1.3;
  }

  .ai-product-trio__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 {{ block.settings.description_margin_bottom }}px 0;
    line-height: 1.4;
  }

  .ai-product-trio__price-wrapper-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.price_margin_bottom }}px;
  }

  .ai-product-trio__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    font-weight: {{ block.settings.price_font_weight }};
    color: {{ block.settings.price_color }};
    margin-right: 8px;
  }

  .ai-product-trio__compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.compare_price_font_size }}px;
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
    opacity: 0.7;
  }

  .ai-product-trio__button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-transform: {{ block.settings.button_text_transform }};
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    text-decoration: none;
    display: inline-block;
  }

  .ai-product-trio__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-product-trio__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    background: rgba(255, 255, 255, 0.9);
    padding: 4px 8px;
    border-radius: 4px;
    white-space: nowrap;
  }

  @media screen and (max-width: 768px) {
    .ai-product-trio__grid-{{ ai_gen_id }} {
      {% if block.settings.columns_mobile == '1' %}
        grid-template-columns: 1fr;
      {% else %}
        grid-template-columns: repeat(2, 1fr);
      {% endif %}gap: {{ block.settings.mobile_spacing }}px;
    }

    .ai-product-trio-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding }}px;
    }

    .ai-product-trio__header-{{ ai_gen_id }} {
      font-size: {{ block.settings.header_font_size | times: 0.9 | round }}px;
    }

    .ai-product-trio__product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_font_size | times: 0.9 | round }}px;
    }

    .ai-product-trio__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_font_size | times: 0.9 | round }}px;
    }

    .ai-product-trio__image-{{ ai_gen_id }},
    .ai-product-trio__image-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_image_height }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-product-trio__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-product-trio-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-trio__grid-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign product_key = 'product_' | append: i
        assign header_key = 'header_' | append: i
        assign description_key = 'custom_description_' | append: i
        assign product = block.settings[product_key]
        assign header = block.settings[header_key]
        assign description = block.settings[description_key]
      %}
      
      <div class="ai-product-trio__item-{{ ai_gen_id }}">
        {% if header != blank %}
          <h3 class="ai-product-trio__header-{{ ai_gen_id }}">{{ header }}</h3>
        {% endif %}<div class="ai-product-trio__image-wrapper-{{ ai_gen_id }}">
          {% if product and product.featured_image %}
            <img
              src="{{ product.featured_image | image_url: width: 400 }}"
              alt="{{ product.featured_image.alt | escape }}"
              class="ai-product-trio__image-{{ ai_gen_id }}"
              loading="lazy"
              width="400"
              height="{{ block.settings.image_height }}"
            >
          {% else %}
            <div class="ai-product-trio__image-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}{% unless product %}
                <div class="ai-product-trio__empty-state-{{ ai_gen_id }}">
                  Select product {{ i }}
                </div>
              {% endunless %}
            </div>
          {% endif %}
        </div>

        {% if product %}
          <h4 class="ai-product-trio__product-title-{{ ai_gen_id }}">{{ product.title }}</h4>
        {% else %}
          <h4 class="ai-product-trio__product-title-{{ ai_gen_id }}">Product Title</h4>
        {% endif %}

        {% if description != blank %}
          <p class="ai-product-trio__description-{{ ai_gen_id }}">{{ description }}</p>
        {% endif %}

        <div class="ai-product-trio__price-wrapper-{{ ai_gen_id }}">
          {% if product %}<span class="ai-product-trio__price-{{ ai_gen_id }}">{{ product.price | money }}</span>
            {% if product.compare_at_price > product.price %}
              <span class="ai-product-trio__compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
            {% endif %}
          {% else %}
            <span class="ai-product-trio__price-{{ ai_gen_id }}">$29.99</span>
            <span class="ai-product-trio__compare-price-{{ ai_gen_id }}">$39.99</span>
          {% endif %}
        </div>

        {% if product %}
          <a href="{{ product.url }}" class="ai-product-trio__button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% else %}
          <button class="ai-product-trio__button-{{ ai_gen_id }}" disabled>
            {{ block.settings.button_text }}
          </button>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

