{% doc %}
  @prompt
    Create a section with a header at the top, followed by a split layout with left and right parts. The left side should display one main product with title, price, compare-at price, and add to cart button. The right side should display four smaller products in a grid, each with title, price, compare-at price, and add to cart button. Include customizable settings for section header text, background color, adjustable height for both left and right sections, and font size controls. Make the layout responsive and visually appealing with proper styling for sale prices and compare-at prices.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-split-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: 40px 20px;
  }

  .ai-product-split__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-product-split__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-product-split__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.header_font_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-product-split__content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: stretch;
  }

  .ai-product-split__left-{{ ai_gen_id }} {
    height: {{ block.settings.left_height }}px;
    display: flex;
    flex-direction: column;
  }

  .ai-product-split__right-{{ ai_gen_id }} {
    height: {{ block.settings.right_height }}px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 20px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: 12px;
    padding: 20px;
    display: flex;
    flex-direction: column;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .ai-product-card__image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 16px;
    background: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-card__image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-card__image-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-product-card__content-{{ ai_gen_id }} {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-product-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_font_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    line-height: 1.3;
    font-weight: 600;
  }

  .ai-product-card__price-wrapper-{{ ai_gen_id }} {
    margin-bottom: 16px;
  }

  .ai-product-card__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 700;
    margin-right: 8px;
  }

  .ai-product-card__compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size | minus: 2 }}px;
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
    opacity: 0.7;
  }

  .ai-product-card__button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    padding: 12px 24px;
    border-radius: 8px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-decoration: none;
    text-align: center;
    margin-top: auto;
  }

  .ai-product-card__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-product-card--main-{{ ai_gen_id }} {
    height: 100%;
  }

  .ai-product-card--main-{{ ai_gen_id }} .ai-product-card__image-{{ ai_gen_id }} {
    aspect-ratio: 4/3;
    margin-bottom: 24px;
  }

  .ai-product-card--main-{{ ai_gen_id }} .ai-product-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_font_size | plus: 4 }}px;
    margin-bottom: 16px;
  }

  .ai-product-card--main-{{ ai_gen_id }} .ai-product-card__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size | plus: 4 }}px;
  }

  .ai-product-card--main-{{ ai_gen_id }} .ai-product-card__compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size | plus: 2 }}px;
  }

  .ai-product-card--main-{{ ai_gen_id }} .ai-product-card__button-{{ ai_gen_id }} {
    padding: 16px 32px;
    font-size: {{ block.settings.button_font_size | plus: 2 }}px;
    margin-top: 20px;
  }

  .ai-product-card--small-{{ ai_gen_id }} .ai-product-card__image-{{ ai_gen_id }} {
    aspect-ratio: 1;
    margin-bottom: 12px;
  }

  .ai-product-card--small-{{ ai_gen_id }} .ai-product-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_font_size | minus: 2 }}px;
    margin-bottom: 8px;
    line-height: 1.2;
  }

  .ai-product-card--small-{{ ai_gen_id }} .ai-product-card__price-wrapper-{{ ai_gen_id }} {
    margin-bottom: 12px;
  }

  .ai-product-card--small-{{ ai_gen_id }} .ai-product-card__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size | minus: 2 }}px;
  }

  .ai-product-card--small-{{ ai_gen_id }} .ai-product-card__compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size | minus: 4 }}px;
  }

  .ai-product-card--small-{{ ai_gen_id }} .ai-product-card__button-{{ ai_gen_id }} {
    padding: 8px 16px;
    font-size: {{ block.settings.button_font_size | minus: 2 }}px;
  }

  .ai-product-empty-state-{{ ai_gen_id }} {
    color: #999;
    text-align: center;
    font-style: italic;
    padding: 20px;
  }

  @media screen and (max-width: 768px) {
    .ai-product-split__content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-product-split__left-{{ ai_gen_id }} {
      height: auto;
      min-height: 400px;
    }

    .ai-product-split__right-{{ ai_gen_id }} {
      height: auto;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto auto;
    }

    .ai-product-split__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.header_font_size | minus: 6 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-product-split__right-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(4, auto);
    }

    .ai-product-split-{{ ai_gen_id }} {
      padding: 30px 15px;
    }
  }
{% endstyle %}

<div class="ai-product-split-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-split__container-{{ ai_gen_id }}">
    {% if block.settings.header_text != blank %}
      <div class="ai-product-split__header-{{ ai_gen_id }}">
        <h2 class="ai-product-split__title-{{ ai_gen_id }}">{{ block.settings.header_text }}</h2>
      </div>
    {% endif %}

    <div class="ai-product-split__content-{{ ai_gen_id }}">
      <div class="ai-product-split__left-{{ ai_gen_id }}">
        {% if block.settings.main_product != blank %}
          <div class="ai-product-card-{{ ai_gen_id }} ai-product-card--main-{{ ai_gen_id }}">
            <div class="ai-product-card__image-{{ ai_gen_id }}">
              {% if block.settings.main_product.featured_image %}
                <img
                  src="{{ block.settings.main_product.featured_image | image_url: width: 600 }}"
                  alt="{{ block.settings.main_product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="600"
                  height="450"
                >
              {% else %}
                {{ 'product-1' | placeholder_svg_tag }}
              {% endif %}
            </div>
            <div class="ai-product-card__content-{{ ai_gen_id }}">
              <h3 class="ai-product-card__title-{{ ai_gen_id }}">{{ block.settings.main_product.title }}</h3>
              <div class="ai-product-card__price-wrapper-{{ ai_gen_id }}">
                <span class="ai-product-card__price-{{ ai_gen_id }}">{{ block.settings.main_product.price | money }}</span>
                {% if block.settings.main_product.compare_at_price > block.settings.main_product.price %}
                  <span class="ai-product-card__compare-price-{{ ai_gen_id }}">{{ block.settings.main_product.compare_at_price | money }}</span>
                {% endif %}
              </div>
              <a href="{{ block.settings.main_product.url }}" class="ai-product-card__button-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </a>
            </div>
          </div>
        {% else %}
          <div class="ai-product-card-{{ ai_gen_id }} ai-product-card--main-{{ ai_gen_id }}">
            <div class="ai-product-card__image-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
            </div>
            <div class="ai-product-empty-state-{{ ai_gen_id }}">
              Select a main product to display
            </div>
          </div>
        {% endif %}
      </div>

      <div class="ai-product-split__right-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% assign product_key = 'small_product_' | append: i %}
          {% assign product = block.settings[product_key] %}
          
          {% if product != blank %}
            <div class="ai-product-card-{{ ai_gen_id }} ai-product-card--small-{{ ai_gen_id }}">
              <div class="ai-product-card__image-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 300 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="300"
                    height="300"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag }}
                {% endif %}
              </div>
              <div class="ai-product-card__content-{{ ai_gen_id }}">
                <h4 class="ai-product-card__title-{{ ai_gen_id }}">{{ product.title }}</h4>
                <div class="ai-product-card__price-wrapper-{{ ai_gen_id }}">
                  <span class="ai-product-card__price-{{ ai_gen_id }}">{{ product.price | money }}</span>
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-product-card__compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </div>
                <a href="{{ product.url }}" class="ai-product-card__button-{{ ai_gen_id }}">
                  {{ block.settings.button_text }}
                </a>
              </div>
            </div>
          {% else %}
            <div class="ai-product-card-{{ ai_gen_id }} ai-product-card--small-{{ ai_gen_id }}">
              <div class="ai-product-card__image-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
              <div class="ai-product-empty-state-{{ ai_gen_id }}">
                Select product {{ i }}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

