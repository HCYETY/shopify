<style>
  #container-{{section.id}}.tips_wrap {
    padding: 0 18.5vw;
    padding-top: 5.3vw;
    padding-bottom: 15vw;
  }
  #container-{{section.id}}.tips_wrap .abs_div {
    width: 100%;
  }
  #container-{{section.id}}.tips_wrap .abs_div .mtitle {
    font-family: HarmonyOS_Sans_SC_Bold;
    font-weight: bold;
    font-size: 2.13vw;
    text-align: center;
    color: #000000;
  }
  #container-{{section.id}}.tips_wrap .abs_div .tips_text {
    margin-top: 2.3vw;
    font-size: 1.17vw;
    color: #000;
    line-height: 1.3;
  }

  @media (max-width: 769px) {
    #container-{{section.id}}.tips_wrap {
      padding: 0 4.4vw;
      padding-top: 16vw;
      padding-bottom: 25vw;
    }
    #container-{{section.id}}.tips_wrap .abs_div {
      width: 100%;
    }
    #container-{{section.id}}.tips_wrap .abs_div .mtitle {
      font-size: 5vw;
      text-align: center;
      color: #000000;
    }
    #container-{{section.id}}.tips_wrap .abs_div .tips_text {
      margin-top: 4.2vw;
      font-size: 3.3vw;
      color: #000;
      line-height: 1.3;
    }
  }
</style>


<div id="container-{{section.id}}" class="tips_wrap" style="background: {{ section.settings.tips_background_color }};">
    <div class="abs_div">
        <div class="mtitle" style="color: {{section.settings.text_color}};">{{ section.settings.tips_title  }}</div>
        <div class="tips_text" style="color: {{section.settings.text_color}};">
          {{ section.settings.tips_text }}
        </div>
    </div>
</div>


{% schema %}
  {
    "name": "tips_text",
    "settings": [
      {
        "type": "text",
        "id": "tips_background_color",
        "label": "背景颜色",
        "default": "linear-gradient(45deg, #5B79C5, #9DC4D7)"
      },
      {
        "type": "text",
        "id": "tips_title",
        "label": "标题",
        "default": "Event Details and Terms:"
      },
      {
        "type": "textarea",
        "id": "tips_text",
        "label": "文本"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "字体颜色",
        "default": "#000"
      }
    ],
    "presets": [
      {
        "name": "tips_text"
      }
    ]
  }
{% endschema %}