<div class="promotion-countdown-section">
  <div class="promotion-content">
    <div class="promotion-logo">
      <div class="promotion-logo-image-container">
        <img
          src="{{ section.settings.logo_image | image_url }}"
          alt="{{ section.settings.logo_image.alt }}"
          class="promotion-logo-image"
          width="100%"
          height="100%"
        >
      </div>
      {% if section.settings.logo_text != blank %}
        <span class="promotion-logo-text">{{ section.settings.logo_text }}</span>
      {% endif %}
    </div>
    {% if section.settings.headline != blank %}
      <h2 class="promotion-headline">{{ section.settings.headline }}</h2>
    {% endif %}

    {% if section.settings.subheadline != blank %}
      <p class="promotion-subheadline">{{ section.settings.subheadline }}</p>
    {% endif %}

    {% if section.settings.offer_text != blank %}
      <div class="promotion-offer">{{ section.settings.offer_text }}</div>
    {% endif %}

    {% if section.settings.date_range != blank %}
      <div class="promotion-date-range">{{ section.settings.date_range }}</div>
    {% endif %}

    {% if section.settings.countdown_end_date != blank %}
      <div class="countdown-timer" data-end-date="{{ section.settings.countdown_end_date }}">
        <div class="countdown-item">
          <span class="countdown-value days">00</span>
          <span class="countdown-label">{{ section.settings.days_text }}</span>
        </div>
        <div class="countdown-separator">
          <span class="dot"></span>
          <span class="dot"></span>
        </div>
        <div class="countdown-item">
          <span class="countdown-value hours">00</span>
          <span class="countdown-label">{{ section.settings.hours_text }}</span>
        </div>
        <div class="countdown-separator">
          <span class="dot"></span>
          <span class="dot"></span>
        </div>
        <div class="countdown-item">
          <span class="countdown-value minutes">00</span>
          <span class="countdown-label">{{ section.settings.minutes_text }}</span>
        </div>
        <div class="countdown-separator">
          <span class="dot"></span>
          <span class="dot"></span>
        </div>
        <div class="countdown-item">
          <span class="countdown-value seconds">00</span>
          <span class="countdown-label">{{ section.settings.seconds_text }}</span>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<script src="{{ '2025-03-27-s1.js' | asset_url }}" defer></script>

