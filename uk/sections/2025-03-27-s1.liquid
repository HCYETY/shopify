{% style %}
  .promotion-countdown-section {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
    background-image: url('{{ section.settings.background_image | img_url: 'master' }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
  }

  .promotion-content {
    width: fit-content;
    display: flex;
    flex-direction: column;
    align-items: start;
    margin-top: 33.5px;
    margin-left: 290px;
  }

  .promotion-headline {
    font-size: 34px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #000;
    line-height: 1;
  }

  .promotion-subheadline {
    font-size: 16px;
    font-weight: 600;
    color: #000;
    margin-bottom: 10px;
    line-height: 1;
  }

  .promotion-offer {
    font-size: 30px;
    font-weight: 600;
    color: #ffa900;
    margin-bottom: 10px;
    line-height: 1;
  }

  .promotion-date-range {
    font-size: 16px;
    margin-bottom: 14px;
    font-weight: 500;
    color: #000;
    line-height: 1;
  }

  .countdown-timer {
    display: flex;
    justify-content: center;
    gap: 14px;
  }

  .countdown-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 32px;
    position: relative;
  }

  .countdown-separator {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 30px;
    gap: 4px;
  }

  .dot {
    display: inline-block;
    width: 4px;
    height: 4px;
    background-color: #000;
    border-radius: 50%;
  }

  .countdown-value {
    font-size: 16px;
    font-weight: 700;
    background: #fff;
    border-radius: 6px;
    padding: 8px 0;
    min-width: 32px;
    width: 32px;
    display: block;
    box-sizing: border-box;
    text-align: center;
    color: #ffaa00;
    line-height: 1;
  }

  .countdown-label {
    font-size: 10px;
    margin-top: 5px;
    font-weight: bold;
    text-transform: uppercase;
    position: absolute;
    bottom: -20px;
    left: 50%;
    transform: translateX(-50%);
  }

  .promotion-products {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    width: 100%;
  }

  .promotion-product {
    width: 200px;
    height: 200px;
    background-color: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .promotion-product:hover {
    transform: translateY(-5px);
  }

  .promotion-product img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 10px;
  }

    .promotion-countdown-section .promotion-logo {
      display: flex;
      align-items: center;
      gap: 6.5px;
      padding: 5px 14px;
      margin-bottom: 10px;
      background-color: #ffbd3c;
      border-radius: 5px;
      color: #fff;
      align-self: flex-end;
      font-size: 14px;
      line-height: 1;
    }

    .promotion-countdown-section .promotion-logo-image-container {
      width: 24px;
      height: 24px;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .promotion-countdown-section .promotion-logo-image-container img {
      object-fit: contain;
    }

    @media  (max-width: 900px) {
      .promotion-countdown-section {
        height: 600px;
        background-image: url('{{ section.settings.background_image_mobile | img_url: 'master' }}');
      }
      .promotion-countdown-section .promotion-content {
        align-items: center;
        margin: 47px auto 0;
      }
      .promotion-countdown-section .promotion-headline {
        font-size: 30px;
      }
      .promotion-countdown-section .promotion-logo {
        align-self: center;
      }
    }

