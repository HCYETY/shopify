<script
  defer
>
  document.addEventListener('DOMContentLoaded', function () {
    const header = document.querySelector('#home-s-header-mobile');
    const headerSection = header.closest('.shopify-section.shopify-section-group-header-group');
    if (headerSection) {
      headerSection.classList.add('home-s-header-wrap-sticky');
    }

    // 获取header高度和距离顶部距离
    function updateHeaderVars() {
      const headerHeight = document.querySelector('#home-s-header-mobile').offsetHeight;
      const headerTop = document.querySelector('#home-s-header-mobile').getBoundingClientRect().top + window.scrollY;

      const headerMobile = document.querySelector('.header-mobile');
      if (headerMobile) {
        headerMobile.style.setProperty('--s-header-m-height', `${headerHeight}px`);
        headerMobile.style.setProperty('--activity-bar-m-height', `${headerTop}px`);
      }
    }

    // 初始设置
    updateHeaderVars();

    // 监听窗口大小变化
    window.addEventListener('resize', updateHeaderVars);
  });
</script>

<script defer>
  document.addEventListener('DOMContentLoaded', function () {
    const accordionButtons = document.querySelectorAll('.accordion-column-button');

    accordionButtons.forEach((button) => {
      button.addEventListener('click', function () {
        // 找到最近的accordionSubMenu-container
        const container = this.closest('.accordionSubMenu-container');
        if (!container) return;

        // 找到当前container内的直接子accordion-content
        const content = container.querySelector(':scope > .accordion-content');
        if (!content) return;

        // 找到同一层级的其他accordionSubMenu-container内的accordion-content
        const parentContainer = container.parentElement;
        const siblingContainers = parentContainer.querySelectorAll(':scope > .accordionSubMenu-container');

        // 关闭同级的其他accordion-content
        siblingContainers.forEach((siblingContainer) => {
          if (siblingContainer !== container) {
            const siblingContent = siblingContainer.querySelector(':scope > .accordion-content');
            if (siblingContent) {
              siblingContent.style.height = '0px';
            }
          }
        });

        // 切换当前content的高度
        if (content.style.height === '0px' || content.style.height === '') {
          content.style.height = 'auto';
        } else {
          content.style.height = '0px';
        }
      });
    });

    // 初始化所有accordion-content为关闭状态
    document.querySelectorAll('.accordion-content').forEach((content) => {
      content.style.height = '0px';
    });
  });
</script>

